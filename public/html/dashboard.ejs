<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>GTPSID - Dashboard</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }
        
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: linear-gradient(135deg, #3c2a21 0%, #1a1208 100%);
            color: #d7ccc8;
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 20px;
        }
        
        .main-container {
            display: flex;
            width: 100%;
            max-width: 1000px;
            min-height: 600px;
            background: linear-gradient(135deg, #3c2a21 0%, #1a1208 100%);
            border-radius: 16px;
            overflow: hidden;
            border: 1px solid #5d4037;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.5);
        }

        /* Visual Section */
        .visual-section {
            flex: 1.2;
            background: linear-gradient(135deg, #8d6e63 0%, #5d4037 50%, #3e2723 100%);
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            padding: 40px;
            color: #fff;
            text-align: center;
        }

        .visual-section h1 {
            font-size: 36px;
            margin-bottom: 10px;
            font-weight: 300;
        }

        .visual-section h2 {
            font-size: 42px;
            margin-bottom: 25px;
            font-weight: 700;
        }

        .visual-section p {
            font-size: 15px;
            line-height: 1.6;
            max-width: 300px;
            opacity: 0.9;
        }

        .icon-container {
            width: 70px;
            height: 70px;
            background: rgba(255, 255, 255, 0.1);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            margin-bottom: 20px;
            backdrop-filter: blur(5px);
            border: 1px solid rgba(255, 255, 255, 0.2);
        }

        .icon-container::before {
            content: 'üåø';
            font-size: 32px;
        }

        /* Form Container */
        .form-container {
            flex: 1;
            padding: 30px;
            display: flex;
            flex-direction: column;
            background: rgba(30, 20, 10, 0.85);
        }

        /* Header */
        .form-header {
            text-align: center;
            margin-bottom: 25px;
        }

        .form-header h1 {
            font-size: 28px;
            color: #d7a461;
            margin-bottom: 5px;
        }

        .form-header h2 {
            font-size: 32px;
            color: #d7a461;
            margin-bottom: 20px;
        }

        /* Tab Navigation - SIMPLIFIED */
        .tab-navigation {
            display: flex;
            background: rgba(50, 35, 25, 0.6);
            border-radius: 10px;
            padding: 5px;
            margin-bottom: 20px;
        }

        .tab-btn {
            flex: 1;
            padding: 12px;
            background: none;
            border: none;
            color: #8d6e63;
            font-size: 15px;
            font-weight: 600;
            cursor: pointer;
            border-radius: 8px;
            transition: all 0.2s ease;
        }

        .tab-btn.active {
            background: #d7a461;
            color: #3e2723;
        }

        .tab-btn:hover:not(.active) {
            background: rgba(215, 164, 97, 0.2);
            color: #d7a461;
        }

        /* Form Sections */
        .form-section {
            display: none;
            animation: fadeIn 0.3s ease;
        }

        .form-section.active {
            display: block;
        }

        @keyframes fadeIn {
            from { opacity: 0; transform: translateY(10px); }
            to { opacity: 1; transform: translateY(0); }
        }

        form {
            display: flex;
            flex-direction: column;
            gap: 12px;
        }

        /* Input Fields - SIMPLIFIED */
        input[type="text"], 
        input[type="password"], 
        input[type="email"],
        select {
            width: 100%;
            padding: 12px 15px;
            font-size: 14px;
            background: rgba(50, 35, 25, 0.8);
            color: #efebe9;
            border: 1px solid #6d4c41;
            border-radius: 8px;
            transition: all 0.2s ease;
        }

        input:focus, select:focus {
            outline: none;
            border-color: #d7a461;
            background: rgba(60, 40, 30, 0.9);
            box-shadow: 0 0 0 2px rgba(215, 164, 97, 0.2);
        }

        ::placeholder {
            color: #bcaaa4;
            font-size: 14px;
        }

        /* Optional Fields */
        .optional-fields {
            margin: 5px 0;
            color: #8d6e63;
            font-size: 12px;
            text-align: center;
        }

        /* Buttons - SIMPLIFIED */
        button[type="submit"] {
            width: 100%;
            padding: 14px;
            border: none;
            border-radius: 8px;
            font-size: 15px;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.2s ease;
            margin-top: 8px;
            background: #d7a461;
            color: #3e2723;
        }

        button[type="submit"]:hover {
            background: #e0b879;
            transform: translateY(-1px);
        }

        button[type="submit"]:active {
            transform: translateY(0);
        }

        /* Toggle Password - SIMPLIFIED */
        .toggle-password {
            cursor: pointer;
            color: #a1887f;
            font-size: 12px;
            text-align: right;
            margin-top: -8px;
            margin-bottom: 5px;
            transition: color 0.2s;
            user-select: none;
        }

        .toggle-password:hover {
            color: #d7a461;
        }

        /* Alert Messages - SIMPLIFIED */
        .alert {
            padding: 10px 12px;
            border-radius: 6px;
            margin-bottom: 15px;
            font-size: 13px;
            text-align: center;
            display: none;
            animation: slideDown 0.3s ease;
        }

        @keyframes slideDown {
            from { opacity: 0; transform: translateY(-10px); }
            to { opacity: 1; transform: translateY(0); }
        }

        .alert-success {
            background: rgba(76, 175, 80, 0.15);
            color: #4caf50;
            border: 1px solid #4caf50;
        }

        .alert-error {
            background: rgba(244, 67, 54, 0.15);
            color: #f44336;
            border: 1px solid #f44336;
        }

        /* User Info Panel - SIMPLIFIED */
        .user-panel {
            background: rgba(50, 35, 25, 0.8);
            padding: 15px;
            border-radius: 8px;
            margin: 15px 0;
            border: 1px solid #6d4c41;
            display: none;
            animation: fadeIn 0.3s ease;
        }

        .user-panel.active {
            display: block;
        }

        .info-item {
            margin: 8px 0;
            text-align: left;
            display: flex;
            align-items: center;
        }

        .info-label {
            color: #bcaaa4;
            font-weight: 600;
            font-size: 13px;
            min-width: 80px;
        }

        .info-value {
            color: #efebe9;
            font-size: 13px;
        }

        /* Footer */
        .footer {
            text-align: center;
            margin-top: 20px;
            color: #8d6e63;
            font-size: 11px;
        }

        /* Switch Text - Easy to click */
        .switch-text {
            text-align: center;
            margin-top: 15px;
            color: #8d6e63;
            font-size: 13px;
        }

        .switch-link {
            color: #d7a461;
            cursor: pointer;
            text-decoration: underline;
            font-weight: 600;
            transition: color 0.2s;
        }

        .switch-link:hover {
            color: #e0b879;
        }

        /* Responsive */
        @media (max-width: 768px) {
            .main-container {
                flex-direction: column;
                min-height: auto;
                margin: 10px;
            }
            
            .visual-section {
                padding: 25px 20px;
                order: 2;
            }
            
            .visual-section h1 {
                font-size: 24px;
            }
            
            .visual-section h2 {
                font-size: 28px;
                margin-bottom: 15px;
            }
            
            .visual-section p {
                font-size: 14px;
            }
            
            .form-container {
                padding: 25px 20px;
                order: 1;
            }
            
            .form-header h1 {
                font-size: 24px;
            }
            
            .form-header h2 {
                font-size: 28px;
            }
            
            .icon-container {
                width: 60px;
                height: 60px;
                margin-bottom: 15px;
            }
            
            .icon-container::before {
                font-size: 28px;
            }
        }

        /* Very small screens */
        @media (max-width: 375px) {
            .main-container {
                margin: 5px;
            }
            
            .visual-section {
                padding: 20px 15px;
            }
            
            .form-container {
                padding: 20px 15px;
            }
            
            input[type="text"], 
            input[type="password"], 
            input[type="email"],
            select {
                padding: 10px 12px;
                font-size: 13px;
            }
            
            button[type="submit"] {
                padding: 12px;
                font-size: 14px;
            }
        }
    </style>
</head>
<body>
    <div class="main-container">
        <!-- Form Container -->
        <div class="form-container">
            <div class="form-header">
                <h1>Welcome to</h1>
                <h2>GTPSID</h2>
            </div>

            <!-- Alert Messages -->
            <div id="alertMessage" class="alert"></div>

            <!-- User Info Panel -->
            <div id="userPanel" class="user-panel">
                <div class="info-item">
                    <span class="info-label">GrowID:</span>
                    <span class="info-value" id="userGrowId">-</span>
                </div>
                <div class="info-item">
                    <span class="info-label">Status:</span>
                    <span class="info-value" id="userStatus">-</span>
                </div>
                <div class="info-item">
                    <span class="info-label">Server:</span>
                    <span class="info-value">GTPSID</span>
                </div>
            </div>

            <!-- Tab Navigation - SIMPLIFIED -->
            <div class="tab-navigation">
                <button class="tab-btn active" data-tab="login">LOGIN</button>
                <button class="tab-btn" data-tab="register">REGISTER</button>
            </div>
            
            <!-- Login Form -->
            <div id="loginForm" class="form-section active">
                <form autocomplete="off" id="loginFormElement">
                    <input type="text" name="_token" id="serverInput" placeholder="Server Name *" required />
                    
                    <div class="optional-fields">GrowID & Password (for existing accounts)</div>
                    
                    <input type="text" name="growId" id="loginGrowId" placeholder="Your GrowID" />
                    <input type="password" name="password" id="loginPassword" placeholder="Your Password" />
                    
                    <div class="toggle-password" id="toggleLoginPassword">üëÅÔ∏è Show Password</div>
                    
                    <button type="submit">CONNECT TO GAME</button>
                </form>

                <div class="switch-text">
                    Don't have account? <span class="switch-link" data-tab="register">Create one here</span>
                </div>
            </div>

            <!-- Register Form -->
            <div id="registerForm" class="form-section">
                <form autocomplete="off" id="registerFormElement">
                    <input type="text" name="_token" id="registerServerInput" placeholder="Server Name *" required />
                    
                    <div class="optional-fields">Create New GrowID Account</div>
                    
                    <input type="text" name="growId" id="registerGrowId" placeholder="Choose GrowID *" required />
                    <input type="password" name="password" id="registerPassword" placeholder="Choose Password *" required />
                    <input type="email" name="email" id="registerEmail" placeholder="Your Email *" required />
                    
                    <select name="gender" id="registerGender" required>
                        <option value="">Select Gender *</option>
                        <option value="man">Male</option>
                        <option value="woman">Female</option>
                    </select>
                    
                    <div class="toggle-password" id="toggleRegisterPassword">üëÅÔ∏è Show Password</div>
                    
                    <button type="submit">CREATE ACCOUNT</button>
                </form>

                <div class="switch-text">
                    Already have account? <span class="switch-link" data-tab="login">Login here</span>
                </div>
            </div>

            <div class="footer">
                ¬© 2025 GTPSID. All rights reserved.
            </div>
        </div>

        <!-- Visual Section -->
        <div class="visual-section">
            <div class="icon-container"></div>
            <h1>Join The</h1>
            <h2>ADVENTURE</h2>
            <p>Create your account and join thousands of players in the amazing world of Growtopia. Build, explore, and make new friends!</p>
        </div>
    </div>

    <script>
        document.addEventListener("DOMContentLoaded", () => {
            // Initialize elements
            const tabButtons = document.querySelectorAll('.tab-btn');
            const formSections = document.querySelectorAll('.form-section');
            const alertMessage = document.getElementById('alertMessage');
            const userPanel = document.getElementById('userPanel');
            const switchLinks = document.querySelectorAll('.switch-link');

            // Check if we have data from backend
            const hasData = <%= JSON.stringify(data).replace(/</g, '\\u003c') %>;
            if (hasData && Object.keys(hasData).length > 0) {
                showUserPanel(hasData);
            }

            // Tab functionality - SIMPLIFIED
            function switchTab(targetTab) {
                // Update active tab
                tabButtons.forEach(btn => {
                    btn.classList.toggle('active', btn.getAttribute('data-tab') === targetTab);
                });
                
                // Show target form
                formSections.forEach(section => {
                    section.classList.toggle('active', section.id === `${targetTab}Form`);
                });
                
                // Clear alerts
                hideAlert();
            }

            // Tab button clicks
            tabButtons.forEach(button => {
                button.addEventListener('click', () => {
                    const targetTab = button.getAttribute('data-tab');
                    switchTab(targetTab);
                });
            });

            // Switch link clicks - EASY TO CLICK
            switchLinks.forEach(link => {
                link.addEventListener('click', (e) => {
                    e.preventDefault();
                    const targetTab = link.getAttribute('data-tab');
                    switchTab(targetTab);
                });
            });

            // Load saved data
            const savedGrowId = localStorage.getItem("growId");
            const savedServer = localStorage.getItem("lastServer");
            
            if (savedGrowId) {
                document.getElementById("loginGrowId").value = savedGrowId;
                document.getElementById("registerGrowId").value = savedGrowId;
            }
            if (savedServer) {
                document.getElementById("serverInput").value = savedServer;
                document.getElementById("registerServerInput").value = savedServer;
            }

            // Password toggle functionality
            setupPasswordToggle('toggleLoginPassword', 'loginPassword');
            setupPasswordToggle('toggleRegisterPassword', 'registerPassword');

            // Sync server inputs
            const serverInputs = document.querySelectorAll('input[name="_token"]');
            serverInputs.forEach(input => {
                input.addEventListener('input', (e) => {
                    const value = e.target.value;
                    serverInputs.forEach(otherInput => {
                        if (otherInput !== e.target) {
                            otherInput.value = value;
                        }
                    });
                });
            });

            // Login form handler
            document.getElementById('loginFormElement').addEventListener('submit', async (e) => {
                e.preventDefault();
                await handleLogin();
            });

            // Register form handler
            document.getElementById('registerFormElement').addEventListener('submit', async (e) => {
                e.preventDefault();
                await handleRegister();
            });

            // Enter key support
            document.addEventListener('keypress', (e) => {
                if (e.key === 'Enter') {
                    const activeForm = document.querySelector('.form-section.active form');
                    if (activeForm) {
                        activeForm.dispatchEvent(new Event('submit'));
                    }
                }
            });

            // Helper functions
            function setupPasswordToggle(toggleId, passwordId) {
                const toggle = document.getElementById(toggleId);
                const password = document.getElementById(passwordId);
                
                toggle.addEventListener('click', () => {
                    if (password.type === 'password') {
                        password.type = 'text';
                        toggle.innerHTML = 'üëÅÔ∏è Hide Password';
                    } else {
                        password.type = 'password';
                        toggle.innerHTML = 'üëÅÔ∏è Show Password';
                    }
                });
            }

            async function handleLogin() {
                const formData = new FormData(document.getElementById('loginFormElement'));
                const data = {
                    _token: formData.get('_token'),
                    growId: formData.get('growId'),
                    password: formData.get('password'),
                    action: 'login'
                };

                if (!data._token) {
                    showAlert('Please enter a server name!', 'error');
                    return;
                }

                await submitForm('/player/growid/login/validate', data, 'login');
            }

            async function handleRegister() {
                const formData = new FormData(document.getElementById('registerFormElement'));
                const data = {
                    _token: formData.get('_token'),
                    growId: formData.get('growId'),
                    password: formData.get('password'),
                    email: formData.get('email'),
                    gender: formData.get('gender')
                };

                // Simple validation
                if (!data._token) {
                    showAlert('Please enter a server name!', 'error');
                    return;
                }

                if (!data.growId || !data.password || !data.email || !data.gender) {
                    showAlert('Please fill all required fields!', 'error');
                    return;
                }

                await submitForm('/player/growid/register/validate', data, 'register');
            }

            async function submitForm(url, data, type) {
                try {
                    showAlert('Processing your request...', 'success');
                    
                    const response = await fetch(url, {
                        method: 'POST',
                        headers: { 'Content-Type': 'application/json' },
                        body: JSON.stringify(data)
                    });

                    const result = await response.json();
                    
                    if (result.status === 'success') {
                        // Save to localStorage
                        if (data.growId) {
                            localStorage.setItem("growId", data.growId);
                            localStorage.setItem("lastServer", data._token);
                        }

                        const userData = {
                            growId: data.growId || 'Guest',
                            status: type === 'register' ? 'Registered Successfully' : 'Logged In'
                        };

                        showUserPanel(userData);
                        
                        if (type === 'register') {
                            showAlert('‚úÖ Registration successful! You can now login.', 'success');
                            setTimeout(() => switchTab('login'), 1500);
                        } else {
                            showAlert('‚úÖ Login successful! Preparing game...', 'success');
                            // Simulate game connection
                            setTimeout(() => {
                                if (result.token) {
                                    window.location.href = 'gtpsid://play?token=' + result.token;
                                }
                            }, 1000);
                        }
                    } else {
                        showAlert('‚ùå ' + (result.message || 'An error occurred!'), 'error');
                    }
                } catch (error) {
                    console.error('Submission error:', error);
                    showAlert('‚ùå Network error! Please check your connection.', 'error');
                }
            }

            function showUserPanel(userData) {
                document.getElementById('userGrowId').textContent = userData.growId;
                document.getElementById('userStatus').textContent = userData.status;
                userPanel.classList.add('active');
            }

            function showAlert(message, type) {
                alertMessage.textContent = message;
                alertMessage.className = `alert alert-${type}`;
                alertMessage.style.display = 'block';
                
                // Auto hide success messages after 3 seconds
                if (type === 'success') {
                    setTimeout(hideAlert, 3000);
                }
            }

            function hideAlert() {
                alertMessage.style.display = 'none';
            }
        });
    </script>
</body>
</html>
