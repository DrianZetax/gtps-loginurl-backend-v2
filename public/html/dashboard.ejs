<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>GTPSID - Login & Register</title>
  <link rel="icon" href="https://s3.eu-west-1.amazonaws.com/cdn.growtopiagame.com/website/resources/assets/images/growtopia.ico" />
  
  <style>
    /* Reset & Font Dasar */
    * {
      box-sizing: border-box;
      margin: 0;
      padding: 0;
    }

    html, body {
      height: 100%;
      background: transparent;
      color: #333;
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      display: flex;
      align-items: center;
      justify-content: center;
      overflow: hidden;
      padding: 20px;
    }

    /* Container utama */
    .main-container {
      display: flex;
      width: 100%;
      max-width: 1000px;
      min-height: 580px;
      background: linear-gradient(135deg, #3c2a21 0%, #1a1208 100%);
      border-radius: 16px;
      overflow: hidden;
      border: 1px solid #5d4037;
      position: relative;
    }

    /* Bagian kiri untuk konten visual */
    .visual-section {
      flex: 1.2;
      background: linear-gradient(135deg, #8d6e63 0%, #5d4037 50%, #3e2723 100%);
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: center;
      padding: 40px;
      color: #fff;
      text-align: center;
      position: relative;
      overflow: hidden;
    }

    .visual-section h1 {
      font-size: 42px;
      margin-bottom: 10px;
      font-weight: 300;
    }

    .visual-section h2 {
      font-size: 48px;
      margin-bottom: 30px;
      font-weight: 700;
    }

    .visual-section p {
      font-size: 16px;
      line-height: 1.7;
      max-width: 320px;
      opacity: 0.9;
    }

    /* Ikon dekoratif */
    .icon-container {
      width: 80px;
      height: 80px;
      background: rgba(255, 255, 255, 0.1);
      border-radius: 50%;
      display: flex;
      align-items: center;
      justify-content: center;
      margin-bottom: 25px;
      backdrop-filter: blur(5px);
      border: 1px solid rgba(255, 255, 255, 0.2);
    }

    .icon-container::before {
      content: 'ðŸŒ¿';
      font-size: 36px;
    }

    /* Bagian kanan untuk form */
    .form-container {
      flex: 1;
      padding: 35px;
      display: flex;
      flex-direction: column;
      justify-content: center;
      background: rgba(30, 20, 10, 0.7);
      backdrop-filter: blur(10px);
    }

    /* Tab Navigation */
    .tab-navigation {
      display: flex;
      margin-bottom: 25px;
      border-bottom: 1px solid #5d4037;
    }

    .tab-btn {
      flex: 1;
      padding: 12px;
      background: none;
      border: none;
      color: #8d6e63;
      font-size: 16px;
      font-weight: 600;
      cursor: pointer;
      transition: all 0.3s ease;
    }

    .tab-btn.active {
      color: #d7a461;
      border-bottom: 2px solid #d7a461;
    }

    /* Form Styling */
    .form-section {
      display: none;
    }

    .form-section.active {
      display: block;
    }

    form {
      display: flex;
      flex-direction: column;
      gap: 15px;
    }

    /* Input Fields */
    input[type="text"], 
    input[type="password"], 
    input[type="email"],
    select {
      width: 100%;
      padding: 14px 16px;
      font-size: 15px;
      background: rgba(50, 35, 25, 0.8);
      color: #efebe9;
      border: 1px solid #6d4c41;
      border-radius: 10px;
      transition: all 0.3s ease;
    }

    input:focus, select:focus {
      outline: none;
      border-color: #a1887f;
      background: rgba(60, 40, 30, 0.9);
    }

    ::placeholder {
      color: #bcaaa4;
    }

    /* Optional Fields */
    .optional-fields {
      margin: 8px 0;
      color: #8d6e63;
      font-size: 13px;
      text-align: center;
    }

    /* Tombol */
    button[type="submit"] {
      width: 100%;
      padding: 15px;
      border: none;
      border-radius: 10px;
      font-size: 16px;
      font-weight: 600;
      cursor: pointer;
      transition: all 0.3s ease;
      margin-top: 10px;
    }

    button:active {
      transform: scale(0.98);
    }

    .btn-primary {
      background: linear-gradient(45deg, #d7a461, #b08c5a);
      color: #3e2723;
    }

    .btn-primary:hover {
      background: linear-gradient(45deg, #e0b879, #c19a64);
    }

    /* Link "Show Password" */
    .toggle-password {
      cursor: pointer;
      color: #a1887f;
      font-size: 13px;
      text-align: right;
      margin-top: -8px;
      margin-bottom: 8px;
      transition: color 0.3s;
    }

    .toggle-password:hover {
      color: #d7a461;
    }

    /* Alert Messages */
    .alert {
      padding: 12px;
      border-radius: 8px;
      margin-bottom: 15px;
      font-size: 14px;
      text-align: center;
      display: none;
    }

    .alert-success {
      background: rgba(76, 175, 80, 0.2);
      color: #4caf50;
      border: 1px solid #4caf50;
    }

    .alert-error {
      background: rgba(244, 67, 54, 0.2);
      color: #f44336;
      border: 1px solid #f44336;
    }

    /* Footer */
    .footer {
      text-align: center;
      margin-top: 25px;
      color: #8d6e63;
      font-size: 12px;
    }

    /* Responsive */
    @media (max-width: 768px) {
      html, body {
        padding: 10px;
        overflow: auto;
        height: auto;
        min-height: 100vh;
        display: block;
      }

      .main-container {
        flex-direction: column;
        height: auto;
        min-height: auto;
        margin: 0 auto;
        max-width: 100%;
      }
      
      .visual-section {
        padding: 30px 20px;
        order: 2;
      }
      
      .visual-section h1 {
        font-size: 28px;
      }
      
      .visual-section h2 {
        font-size: 32px;
        margin-bottom: 15px;
      }
      
      .form-container {
        padding: 25px 20px;
        order: 1;
      }
    }
  </style>
</head>
<body>

  <div class="main-container">
    <!-- Bagian form -->
    <div class="form-container">
      <div class="login-title">
        <h1>Welcome to</h1>
        <h2>GTPSID</h2>
      </div>

      <!-- Alert Messages -->
      <div id="alertMessage" class="alert"></div>

      <!-- Tab Navigation -->
      <div class="tab-navigation">
        <button class="tab-btn active" data-tab="login">Login</button>
        <button class="tab-btn" data-tab="register">Register</button>
      </div>
      
      <!-- Login Form -->
      <div id="loginForm" class="form-section active">
        <form method="POST" autocomplete="off" id="loginFormElement">
          <input type="text" name="_token" id="serverInput" placeholder="Server Name *" required />
          
          <div class="optional-fields">GrowID & Password (Optional - for existing accounts)</div>
          
          <input type="text" name="growId" id="loginGrowId" placeholder="Your GrowID Name (Optional)" />
          <input type="password" name="password" id="loginPassword" placeholder="Your GrowID Password (Optional)" />
          
          <div class="toggle-password" id="toggleLoginPassword">Show Password</div>
          
          <button type="submit" class="btn-primary">Connect to Game</button>
        </form>
      </div>

      <!-- Register Form -->
      <div id="registerForm" class="form-section">
        <form method="POST" autocomplete="off" id="registerFormElement">
          <input type="text" name="_token" id="registerServerInput" placeholder="Server Name *" required />
          
          <div class="optional-fields">Create Your GrowID Account</div>
          
          <input type="text" name="growId" id="registerGrowId" placeholder="Choose GrowID Name *" required />
          <input type="password" name="password" id="registerPassword" placeholder="Choose Password *" required />
          <input type="email" name="email" id="registerEmail" placeholder="Your Email *" required />
          
          <select name="gender" id="registerGender" required>
            <option value="">Select Gender *</option>
            <option value="man">Male</option>
            <option value="woman">Female</option>
          </select>
          
          <div class="toggle-password" id="toggleRegisterPassword">Show Password</div>
          
          <button type="submit" class="btn-primary">Create Account & Play</button>
        </form>
      </div>

      <div class="footer">Â© 2025 GTPSID. All rights reserved.</div>
    </div>

    <!-- Bagian visual -->
    <div class="visual-section">
      <div class="icon-container"></div>
      <h1>Join The</h1>
      <h2>ADVENTURE</h2>
      <p>Create your account and join thousands of players in the amazing world of Growtopia. Build, explore, and make new friends!</p>
    </div>
  </div>

  <script>
    document.addEventListener("DOMContentLoaded", () => {
      // Initialize tabs
      const tabButtons = document.querySelectorAll('.tab-btn');
      const formSections = document.querySelectorAll('.form-section');
      const alertMessage = document.getElementById('alertMessage');

      // Tab functionality
      tabButtons.forEach(button => {
        button.addEventListener('click', () => {
          const targetTab = button.getAttribute('data-tab');
          
          // Update active tab
          tabButtons.forEach(btn => btn.classList.remove('active'));
          button.classList.add('active');
          
          // Show target form
          formSections.forEach(section => section.classList.remove('active'));
          document.getElementById(`${targetTab}Form`).classList.add('active');
          
          // Clear alerts
          hideAlert();
        });
      });

      // Load saved data
      const savedGrowId = localStorage.getItem("growId");
      const savedServer = localStorage.getItem("lastServer");
      
      if (savedGrowId) {
        document.getElementById("loginGrowId").value = savedGrowId;
        document.getElementById("registerGrowId").value = savedGrowId;
      }
      if (savedServer) {
        document.getElementById("serverInput").value = savedServer;
        document.getElementById("registerServerInput").value = savedServer;
      }

      // Password toggle functionality
      setupPasswordToggle('toggleLoginPassword', 'loginPassword');
      setupPasswordToggle('toggleRegisterPassword', 'registerPassword');

      // Sync server inputs
      const serverInputs = document.querySelectorAll('input[name="_token"]');
      serverInputs.forEach(input => {
        input.addEventListener('input', (e) => {
          serverInputs.forEach(otherInput => {
            if (otherInput !== e.target) {
              otherInput.value = e.target.value;
            }
          });
        });
      });

      // Login form handler
      document.getElementById('loginFormElement').addEventListener('submit', async (e) => {
        e.preventDefault();
        
        const formData = new FormData(e.target);
        const data = {
          _token: formData.get('_token'),
          growId: formData.get('growId'),
          password: formData.get('password'),
          action: 'login'
        };

        if (!data._token) {
          showAlert('Please enter a server name!', 'error');
          return;
        }

        await submitForm('/player/growid/login/validate', data, 'login');
      });

      // Register form handler
      document.getElementById('registerFormElement').addEventListener('submit', async (e) => {
        e.preventDefault();
        
        const formData = new FormData(e.target);
        const data = {
          _token: formData.get('_token'),
          growId: formData.get('growId'),
          password: formData.get('password'),
          email: formData.get('email'),
          gender: formData.get('gender')
        };

        // Validation
        if (!data._token) {
          showAlert('Please enter a server name!', 'error');
          return;
        }

        if (!data.growId || !data.password || !data.email || !data.gender) {
          showAlert('Please fill all required fields!', 'error');
          return;
        }

        if (data.growId.length < 3 || data.growId.length > 18) {
          showAlert('GrowID must be between 3 and 18 characters!', 'error');
          return;
        }

        if (data.password.length < 4 || data.password.length > 18) {
          showAlert('Password must be between 4 and 18 characters!', 'error');
          return;
        }

        if (!/^[a-zA-Z0-9]+$/.test(data.growId)) {
          showAlert('GrowID can only contain letters and numbers!', 'error');
          return;
        }

        await submitForm('/player/growid/register/validate', data, 'register');
      });

      // Helper functions
      function setupPasswordToggle(toggleId, passwordId) {
        const toggle = document.getElementById(toggleId);
        const password = document.getElementById(passwordId);
        
        toggle.addEventListener('click', () => {
          if (password.type === 'password') {
            password.type = 'text';
            toggle.textContent = 'Hide Password';
          } else {
            password.type = 'password';
            toggle.textContent = 'Show Password';
          }
        });
      }

      async function submitForm(url, data, type) {
        try {
          showAlert('Processing...', 'success');
          
          const response = await fetch(url, {
            method: 'POST',
            headers: {
              'Content-Type': 'application/json',
            },
            body: JSON.stringify(data)
          });

          const result = await response.json();
          
          if (result.status === 'success') {
            // Save to localStorage
            if (data.growId) {
              localStorage.setItem("growId", data.growId);
              localStorage.setItem("lastServer", data._token);
            }

            if (type === 'register') {
              showAlert('Registration successful! You can now login with your new account.', 'success');
              // Switch to login tab after successful registration
              setTimeout(() => {
                tabButtons[0].click();
              }, 2000);
            } else {
              showAlert('Login successful! Connecting to game...', 'success');
              // Simulate game connection
              setTimeout(() => {
                window.location.href = 'gtpsid://play?token=' + result.token;
              }, 1000);
            }
          } else {
            showAlert(result.message || 'An error occurred!', 'error');
          }
        } catch (error) {
          console.error('Submission error:', error);
          showAlert('Network error! Please try again.', 'error');
        }
      }

      function showAlert(message, type) {
        alertMessage.textContent = message;
        alertMessage.className = `alert alert-${type}`;
        alertMessage.style.display = 'block';
      }

      function hideAlert() {
        alertMessage.style.display = 'none';
      }
    });
  </script>

</body>
</html>
