<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>GTPSID Login</title>
  <link rel="icon" href="https://s3.eu-west-1.amazonaws.com/cdn.growtopiagame.com/website/resources/assets/images/growtopia.ico" />
  
  <style>
    /* Reset & Font Dasar */
    * {
      box-sizing: border-box;
      margin: 0;
      padding: 0;
    }

    html, body {
      height: 100%;
      background: transparent;
      color: #333;
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      
      display: flex;
      align-items: center;
      justify-content: center;
      overflow: hidden;
      padding: 20px;
    }

    /* Container utama yang memanjang ke samping */
    .main-container {
      display: flex;
      width: 100%;
      max-width: 1000px;
      min-height: 550px;
      background: linear-gradient(135deg, #3c2a21 0%, #1a1208 100%);
      border-radius: 16px;
      overflow: hidden;
      border: 1px solid #5d4037;
      position: relative;
    }

    /* Bagian kiri untuk konten visual */
    .visual-section {
      flex: 1.2;
      background: linear-gradient(135deg, #8d6e63 0%, #5d4037 50%, #3e2723 100%);
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: center;
      padding: 40px;
      color: #fff;
      text-align: center;
      position: relative;
      overflow: hidden;
    }

    .visual-section h1 {
      font-size: 42px;
      margin-bottom: 10px;
      font-weight: 300;
      position: relative;
    }

    .visual-section h2 {
      font-size: 48px;
      margin-bottom: 30px;
      font-weight: 700;
      position: relative;
    }

    .visual-section p {
      font-size: 16px;
      line-height: 1.7;
      max-width: 320px;
      opacity: 0.9;
      position: relative;
    }

    /* Ikon dekoratif */
    .icon-container {
      width: 80px;
      height: 80px;
      background: rgba(255, 255, 255, 0.1);
      border-radius: 50%;
      display: flex;
      align-items: center;
      justify-content: center;
      margin-bottom: 25px;
      position: relative;
      backdrop-filter: blur(5px);
      border: 1px solid rgba(255, 255, 255, 0.2);
    }

    .icon-container::before {
      content: 'ðŸŒ¿';
      font-size: 36px;
    }

    /* Bagian kanan untuk form */
    .form-container {
      flex: 1;
      padding: 40px;
      display: flex;
      flex-direction: column;
      justify-content: center;
      background: rgba(30, 20, 10, 0.7);
      backdrop-filter: blur(10px);
      position: relative;
    }

    /* Tab Navigation */
    .tab-navigation {
      display: flex;
      margin-bottom: 30px;
      background: rgba(50, 35, 25, 0.8);
      border-radius: 12px;
      padding: 5px;
    }

    .tab-button {
      flex: 1;
      padding: 12px;
      text-align: center;
      background: transparent;
      border: none;
      color: #bcaaa4;
      font-size: 16px;
      font-weight: 600;
      cursor: pointer;
      border-radius: 8px;
      transition: all 0.3s ease;
    }

    .tab-button.active {
      background: linear-gradient(45deg, #d7a461, #b08c5a);
      color: #3e2723;
    }

    /* Form Styling */
    .form-content {
      display: none;
    }

    .form-content.active {
      display: block;
    }

    /* Judul */
    .form-title h1 {
      font-size: 28px;
      font-weight: 300;
      color: #d7ccc8;
      margin-bottom: 5px;
      text-align: center;
    }

    .form-title h2 {
      font-size: 32px;
      font-weight: 700;
      color: #d7ccc8;
      margin-bottom: 25px;
      text-align: center;
    }

    /* Input Fields */
    input[type="text"], input[type="password"] {
      width: 100%;
      padding: 15px 18px;
      font-size: 16px;
      background: rgba(50, 35, 25, 0.8);
      color: #efebe9;
      border: 1px solid #6d4c41;
      border-radius: 10px;
      transition: all 0.3s ease;
      margin-bottom: 15px;
    }

    /* Efek fokus */
    input:focus {
      outline: none;
      border-color: #a1887f;
      background: rgba(60, 40, 30, 0.9);
    }

    /* Placeholder style */
    ::placeholder {
      color: #bcaaa4;
    }

    /* Tombol Umum */
    button {
      width: 100%;
      padding: 15px;
      border: none;
      border-radius: 10px;
      font-size: 16px;
      font-weight: 600;
      cursor: pointer;
      transition: all 0.3s ease;
      margin-top: 10px;
    }

    button:active {
      transform: scale(0.98);
    }

    /* Tombol Primer */
    .btn-primary {
      background: linear-gradient(45deg, #d7a461, #b08c5a);
      color: #3e2723;
    }
    .btn-primary:hover {
      background: linear-gradient(45deg, #e0b879, #c19a64);
    }

    /* Tombol Sekunder */
    .btn-secondary {
      background: rgba(93, 64, 55, 0.8);
      color: #d7ccc8;
      border: 1px solid #6d4c41;
    }
    .btn-secondary:hover {
      background: rgba(109, 76, 65, 0.9);
    }

    /* Link "Show Password" */
    .toggle-password {
      cursor: pointer;
      color: #a1887f;
      font-size: 14px;
      text-align: right;
      margin-top: -10px;
      margin-bottom: 15px;
      transition: color 0.3s;
    }
    .toggle-password:hover {
      color: #d7a461;
    }

    /* Footer kecil */
    .footer {
      text-align: center;
      margin-top: 25px;
      color: #8d6e63;
      font-size: 12px;
    }

    /* Guest Login Section */
    .guest-section {
      margin-top: 20px;
      padding-top: 20px;
      border-top: 1px solid #5d4037;
    }

    .guest-section p {
      color: #8d6e63;
      text-align: center;
      margin-bottom: 15px;
      font-size: 14px;
    }

    /* Message Box */
    .message-box {
      padding: 12px;
      border-radius: 8px;
      margin-bottom: 15px;
      text-align: center;
      font-size: 14px;
      display: none;
    }

    .message-success {
      background: rgba(76, 175, 80, 0.2);
      color: #a5d6a7;
      border: 1px solid #4caf50;
    }

    .message-error {
      background: rgba(244, 67, 54, 0.2);
      color: #ef9a9a;
      border: 1px solid #f44336;
    }

    /* ========== RESPONSIVE UNTUK MOBILE ========== */
    @media (max-width: 768px) {
      html, body {
        padding: 10px;
        overflow: auto;
        height: auto;
        min-height: 100vh;
        display: block;
        scrollbar-width: none;
        -ms-overflow-style: none;
      }

      html::-webkit-scrollbar,
      body::-webkit-scrollbar {
        display: none;
      }

      .main-container {
        flex-direction: column;
        height: auto;
        min-height: auto;
        margin: 0 auto;
        max-width: 100%;
        overflow: visible;
      }
      
      .visual-section {
        padding: 30px 20px;
        order: 2;
        overflow: visible;
      }
      
      .visual-section h1 {
        font-size: 28px;
      }
      
      .visual-section h2 {
        font-size: 32px;
        margin-bottom: 15px;
      }
      
      .visual-section p {
        font-size: 14px;
        max-width: 100%;
      }
      
      .form-container {
        padding: 30px 20px;
        order: 1;
        overflow: visible;
      }
      
      .form-title h1 {
        font-size: 24px;
      }
      
      .form-title h2 {
        font-size: 28px;
        margin-bottom: 20px;
      }

      input[type="text"], 
      input[type="password"] {
        padding: 12px 15px;
        font-size: 16px;
      }

      button {
        padding: 14px;
        font-size: 16px;
      }

      .icon-container {
        width: 60px;
        height: 60px;
        margin-bottom: 15px;
      }

      .icon-container::before {
        font-size: 28px;
      }
    }

    /* Untuk layar sangat kecil (iPhone SE dll) */
    @media (max-width: 375px) {
      .visual-section {
        padding: 25px 15px;
      }
      
      .form-container {
        padding: 25px 15px;
      }
      
      .visual-section h1 {
        font-size: 24px;
      }
      
      .visual-section h2 {
        font-size: 28px;
      }
      
      .form-title h1 {
        font-size: 22px;
      }
      
      .form-title h2 {
        font-size: 26px;
      }
    }

    /* Landscape mode untuk mobile */
    @media (max-height: 500px) and (orientation: landscape) {
      html, body {
        padding: 10px;
        overflow: auto;
      }

      .main-container {
        height: auto;
        min-height: auto;
      }
      
      .visual-section,
      .form-container {
        padding: 20px;
      }
    }

    html {
      scroll-behavior: smooth;
    }

  </style>
</head>
<body>

  <div class="main-container">
    <!-- Bagian form di sebelah kanan (atas di mobile) -->
    <div class="form-container">
      <!-- Tab Navigation -->
      <div class="tab-navigation">
        <button class="tab-button active" data-tab="login">Login</button>
        <button class="tab-button" data-tab="register">Register</button>
      </div>

      <!-- Login Form -->
      <div class="form-content active" id="loginFormContent">
        <div class="form-title">
          <h1>Login to Your</h1>
          <h2>Account</h2>
        </div>
        
        <form method="POST" action="/player/growid/login/validate" autocomplete="off" id="loginForm">
          <input type="text" name="_token" id="loginServerInput" placeholder="Server Name *" required />
          <input type="text" name="growId" id="loginGrowId" placeholder="Your GrowID *" required />
          <input type="password" name="password" id="loginPassword" placeholder="Your Password *" required />
          
          <div class="toggle-password" id="toggleLoginPassword">Show Password</div>
          
          <button type="submit" name="action" value="Login" class="btn-primary">Login to Game</button>
        </form>

        <div class="guest-section">
          <p>Don't have an account?</p>
          <button type="button" class="btn-secondary" onclick="switchTab('register')">Create New Account</button>
        </div>
      </div>

      <!-- Register Form -->
      <div class="form-content" id="registerFormContent">
        <div class="form-title">
          <h1>Create New</h1>
          <h2>Account</h2>
        </div>
        
        <form method="POST" action="/player/growid/login/validate" autocomplete="off" id="registerForm">
          <input type="text" name="_token" id="registerServerInput" placeholder="Server Name *" required />
          <input type="text" name="growId" id="registerGrowId" placeholder="Choose GrowID *" required />
          <input type="password" name="password" id="registerPassword" placeholder="Choose Password *" required />
          <input type="password" name="confirmPassword" id="confirmPassword" placeholder="Confirm Password *" required />
          
          <div class="toggle-password" id="toggleRegisterPassword">Show Password</div>
          
          <button type="submit" name="action" value="Register" class="btn-primary">Create Account</button>
        </form>

        <div class="guest-section">
          <p>Already have an account?</p>
          <button type="button" class="btn-secondary" onclick="switchTab('login')">Back to Login</button>
        </div>
      </div>

      <div class="footer">Â© 2025 GTPSID. All rights reserved.</div>
    </div>

    <!-- Bagian visual di sebelah kiri (bawah di mobile) -->
    <div class="visual-section">
      <div class="icon-container"></div>
      <h1>Welcome to</h1>
      <h2>GTPSID</h2>
      <p>Connect with thousands of players worldwide. Join the adventure in the world of Growtopia and explore endless possibilities!</p>
    </div>
  </div>

  <script>
    // Data server untuk autocomplete
    const servers = [
      "STYLOPS",
      "CHINAPS", 
      "COASTPS",
      "SLOWLYPS",
      "NEXPS",
      "TESPS",
      "IDLEPS"
    ];

    document.addEventListener("DOMContentLoaded", () => {
      // Load data dari localStorage
      const growId = localStorage.getItem("growId");
      const lastServer = localStorage.getItem("lastServer");
      
      if (growId) {
        document.getElementById("loginGrowId").value = growId;
        document.getElementById("registerGrowId").value = growId;
      }
      if (lastServer) {
        document.getElementById("loginServerInput").value = lastServer;
        document.getElementById("registerServerInput").value = lastServer;
      }
      
      // Setup autocomplete untuk server input
      setupServerAutocomplete('loginServerInput');
      setupServerAutocomplete('registerServerInput');
    });

    // Tab Switching Function
    function switchTab(tabName) {
      // Update tab buttons
      document.querySelectorAll('.tab-button').forEach(button => {
        button.classList.remove('active');
        if (button.dataset.tab === tabName) {
          button.classList.add('active');
        }
      });

      // Update form content
      document.querySelectorAll('.form-content').forEach(content => {
        content.classList.remove('active');
      });
      document.getElementById(tabName + 'FormContent').classList.add('active');
    }

    // Password Toggle Functions
    document.getElementById("toggleLoginPassword").addEventListener("click", () => {
      togglePassword('loginPassword', 'toggleLoginPassword');
    });

    document.getElementById("toggleRegisterPassword").addEventListener("click", () => {
      togglePassword('registerPassword', 'toggleRegisterPassword');
      togglePassword('confirmPassword', 'toggleRegisterPassword');
    });

    function togglePassword(passwordId, toggleId) {
      const pwd = document.getElementById(passwordId);
      const toggle = document.getElementById(toggleId);
      if (pwd.type === "password") {
        pwd.type = "text";
        toggle.textContent = "Hide Password";
      } else {
        pwd.type = "password";
        toggle.textContent = "Show Password";
      }
    }

    // Form Validation and Submission
    document.getElementById("loginForm").addEventListener("submit", (e) => {
      const growId = document.getElementById("loginGrowId").value;
      const server = document.getElementById('loginServerInput').value;
      const password = document.getElementById('loginPassword').value;
      
      if (!server || !growId || !password) {
        e.preventDefault();
        showMessage('Please fill all required fields!', 'error');
        return;
      }
      
      // Simpan ke localStorage
      localStorage.setItem("growId", growId);
      localStorage.setItem("lastServer", server);
      
      console.log("Login submitted:", { server, growId });
    });

    document.getElementById("registerForm").addEventListener("submit", (e) => {
      const growId = document.getElementById("registerGrowId").value;
      const server = document.getElementById('registerServerInput').value;
      const password = document.getElementById('registerPassword').value;
      const confirmPassword = document.getElementById('confirmPassword').value;
      
      if (!server || !growId || !password || !confirmPassword) {
        e.preventDefault();
        showMessage('Please fill all required fields!', 'error');
        return;
      }
      
      if (password !== confirmPassword) {
        e.preventDefault();
        showMessage('Passwords do not match!', 'error');
        return;
      }
      
      if (password.length < 4) {
        e.preventDefault();
        showMessage('Password must be at least 4 characters!', 'error');
        return;
      }
      
      // Simpan ke localStorage
      localStorage.setItem("growId", growId);
      localStorage.setItem("lastServer", server);
      
      console.log("Register submitted:", { server, growId });
    });

    // Message Display Function
    function showMessage(message, type) {
      // Create message element if not exists
      let messageBox = document.querySelector('.message-box');
      if (!messageBox) {
        messageBox = document.createElement('div');
        messageBox.className = 'message-box';
        document.querySelector('.form-content.active').insertBefore(messageBox, document.querySelector('.form-content.active form'));
      }
      
      messageBox.textContent = message;
      messageBox.className = `message-box message-${type}`;
      messageBox.style.display = 'block';
      
      setTimeout(() => {
        messageBox.style.display = 'none';
      }, 5000);
    }

    // Touch handling untuk mobile
    let startY;
    const body = document.body;

    body.addEventListener('touchstart', (e) => {
      startY = e.touches[0].clientY;
    });

    body.addEventListener('touchmove', (e) => {
      const currentY = e.touches[0].clientY;
      const diff = startY - currentY;
      
      if (body.scrollHeight > window.innerHeight) {
        return;
      }
      
      if (Math.abs(diff) > 10) {
        e.preventDefault();
      }
    }, { passive: false });

    // Autocomplete Function
    function setupServerAutocomplete(inputId) {
      const serverInput = document.getElementById(inputId);
      let autocompleteList = null;
      
      serverInput.addEventListener('input', function() {
        if (autocompleteList) {
          autocompleteList.remove();
          autocompleteList = null;
        }
        
        const value = this.value.toUpperCase();
        if (!value) return;
        
        const matches = servers.filter(server => 
          server.startsWith(value)
        );
        
        if (matches.length === 0) return;
        
        autocompleteList = document.createElement('ul');
        autocompleteList.className = 'autocomplete-list';
        autocompleteList.style.cssText = `
          position: absolute;
          background: rgba(50, 35, 25, 0.95);
          border: 1px solid #6d4c41;
          border-radius: 10px;
          width: ${serverInput.offsetWidth}px;
          max-height: 150px;
          overflow-y: auto;
          z-index: 1000;
          margin-top: 5px;
          list-style: none;
          padding: 0;
        `;
        
        matches.forEach(match => {
          const item = document.createElement('li');
          item.textContent = match;
          item.style.cssText = `
            padding: 10px 15px;
            cursor: pointer;
            color: #efebe9;
            border-bottom: 1px solid #6d4c41;
          `;
          item.addEventListener('mouseover', function() {
            this.style.background = 'rgba(93, 64, 55, 0.8)';
          });
          item.addEventListener('mouseout', function() {
            this.style.background = 'transparent';
          });
          item.addEventListener('click', function() {
            serverInput.value = match;
            autocompleteList.remove();
            autocompleteList = null;
          });
          autocompleteList.appendChild(item);
        });
        
        serverInput.parentNode.appendChild(autocompleteList);
      });
      
      document.addEventListener('click', function(e) {
        if (autocompleteList && !serverInput.contains(e.target) && !autocompleteList.contains(e.target)) {
          autocompleteList.remove();
          autocompleteList = null;
        }
      });
    }

    // Tab button event listeners
    document.querySelectorAll('.tab-button').forEach(button => {
      button.addEventListener('click', function() {
        switchTab(this.dataset.tab);
      });
    });
  </script>

</body>
</html>
