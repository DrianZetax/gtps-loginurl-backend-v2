<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>GTPSID Login & Register</title>
    <link rel="icon" href="https://s3.eu-west-1.amazonaws.com/cdn.growtopiagame.com/website/resources/assets/images/growtopia.ico" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css" />
    <style>
        html, body {
            height: 100%;
            margin: 0;
            background: none;
            display: flex;
            align-items: center;
            justify-content: center;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        }
        .login-container {
            max-width: 400px;
            margin: 80px auto;
            padding: 30px;
            background: white;
            border-radius: 10px;
            box-shadow: 0 0 20px rgba(0,0,0,0.2);
        }
        .alert {
            display: none;
        }
        .password-container {
            position: relative;
        }
        .toggle-password {
            position: absolute;
            right: 10px;
            top: 50%;
            transform: translateY(-50%);
            background: none;
            border: none;
            cursor: pointer;
        }
    </style>
</head>
<body>

<div class="login-container">
    <h3 class="text-center mb-4">GTPSID - Login & Register</h3>
    
    <!-- Alert Messages -->
    <div id="alertSuccess" class="alert alert-success alert-dismissible fade show" role="alert">
        <span id="successMessage"></span>
        <button type="button" class="close" data-dismiss="alert">
            <span>&times;</span>
        </button>
    </div>
    
    <div id="alertError" class="alert alert-danger alert-dismissible fade show" role="alert">
        <span id="errorMessage"></span>
        <button type="button" class="close" data-dismiss="alert">
            <span>&times;</span>
        </button>
    </div>

    <form id="authForm" method="POST" class="needs-validation" novalidate>
        <div class="form-group">
            <input type="text" name="_token" class="form-control" placeholder="Server Name *" required>
            <div class="invalid-feedback">Please enter server name.</div>
        </div>
        
        <div class="form-group">
            <input type="text" name="growId" id="loginGrowId" class="form-control" placeholder="Your GrowID Name *" required />
            <div class="invalid-feedback">Please enter your GrowID.</div>
        </div>

        <div class="form-group password-container">
            <input type="password" name="password" id="loginPassword" class="form-control" placeholder="Your GrowID Password *" required />
            <button type="button" class="toggle-password" id="toggleLogPassword">üëÅÔ∏è</button>
            <div class="invalid-feedback">Please enter your password.</div>
        </div>

        <div class="form-group">
            <button type="submit" name="action" value="login" class="btn btn-primary btn-block">
                Login to Game
            </button>
            <button type="submit" name="action" value="register" class="btn btn-success btn-block">
                Register New Account
            </button>
        </div>
        
        <div class="text-center mt-3">
            <small class="text-muted">
                For registration: Enter desired GrowID and password, then click "Register New Account"
            </small>
        </div>
    </form>
</div>

<script src="https://cdn.jsdelivr.net/npm/jquery@3.6.4/dist/jquery.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js"></script>
<script>
document.addEventListener("DOMContentLoaded", function () {
    // Load stored GrowID if exists
    const stored = localStorage.getItem("growId");
    if (stored) document.getElementById("loginGrowId").value = stored;

    // Toggle password visibility
    document.getElementById("toggleLogPassword").addEventListener("click", function () {
        const pwdField = document.getElementById("loginPassword");
        const isHidden = pwdField.type === "password";
        pwdField.type = isHidden ? "text" : "password";
        this.innerHTML = isHidden ? "üôà" : "üëÅÔ∏è";
    });

    // Form submission handler
    document.getElementById("authForm").addEventListener("submit", function (e) {
        e.preventDefault();
        
        if (!this.checkValidity()) {
            e.stopPropagation();
            this.classList.add('was-validated');
            return;
        }

        const formData = new FormData(this);
        const action = e.submitter.value;
        
        // Show loading state
        const submitBtn = e.submitter;
        const originalText = submitBtn.innerHTML;
        submitBtn.innerHTML = '<span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span> Processing...';
        submitBtn.disabled = true;

        // Store GrowID for future use
        localStorage.setItem("growId", document.getElementById("loginGrowId").value);

        fetch('/player/growid/login/validate', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/x-www-form-urlencoded',
            },
            body: new URLSearchParams(formData)
        })
        .then(response => response.json())
        .then(data => {
            // Hide alerts
            document.getElementById('alertSuccess').style.display = 'none';
            document.getElementById('alertError').style.display = 'none';

            if (data.status === 'success') {
                if (action === 'register') {
                    // Show success message for registration
                    document.getElementById('successMessage').textContent = data.message;
                    document.getElementById('alertSuccess').style.display = 'block';
                    
                    // Clear form after successful registration
                    document.getElementById('loginPassword').value = '';
                    
                    // You can also redirect to login or show login instructions
                    setTimeout(() => {
                        alert('Registration successful! Please use the Login button to enter the game.');
                    }, 1000);
                } else {
                    // For login, proceed with the token
                    if (data.token) {
                        // This would typically be handled by the game client
                        console.log('Login token received:', data.token);
                        alert('Login successful! Token: ' + data.token);
                    }
                }
            } else {
                document.getElementById('errorMessage').textContent = data.message;
                document.getElementById('alertError').style.display = 'block';
            }
        })
        .catch(error => {
            console.error('Error:', error);
            document.getElementById('errorMessage').textContent = 'An error occurred. Please try again.';
            document.getElementById('alertError').style.display = 'block';
        })
        .finally(() => {
            // Reset button state
            submitBtn.innerHTML = originalText;
            submitBtn.disabled = false;
        });
    });
});
</script>
</body>
</html>
