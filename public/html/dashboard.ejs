<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>GTPSID Login</title>
  <link href="https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css" rel="stylesheet" />
  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">

  <style>
    /* ========== VAR & RESET ========== */
    :root {
      --primary-grad: linear-gradient(to right, #FF4B2B, #FF416C);
      --overlay-grad: linear-gradient(to right, #FF416C, #FF4B2B);
      --bg-color: #f6f5f7;
      --white: #ffffff;
      --gray: #333;
      --input-bg: #eee;
    }

    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
      font-family: 'Poppins', sans-serif;
    }

    body {
      background: #f6f5f7;
      display: flex;
      justify-content: center;
      align-items: center;
      flex-direction: column;
      height: 100vh;
      margin: 0;
      /* Background dinamis */
      background: linear-gradient(135deg, #FFDEE9 0%, #B5FFFC 100%);
    }

    /* ========== CONTAINER UTAMA ========== */
    .container {
      background-color: var(--white);
      border-radius: 20px;
      box-shadow: 0 14px 28px rgba(0, 0, 0, 0.25), 
                  0 10px 10px rgba(0, 0, 0, 0.22);
      position: relative;
      overflow: hidden;
      width: 768px;
      max-width: 100%;
      min-height: 480px;
    }

    /* ========== FORM STYLING ========== */
    .form-container {
      position: absolute;
      top: 0;
      height: 100%;
      transition: all 0.6s ease-in-out;
    }

    form {
      background-color: var(--white);
      display: flex;
      align-items: center;
      justify-content: center;
      flex-direction: column;
      padding: 0 50px;
      height: 100%;
      text-align: center;
    }

    h1 {
      font-weight: 700;
      margin: 0;
      color: var(--gray);
    }

    .social-container {
      margin: 20px 0;
    }

    .social-container a {
      border: 1px solid #DDDDDD;
      border-radius: 50%;
      display: inline-flex;
      justify-content: center;
      align-items: center;
      margin: 0 5px;
      height: 40px;
      width: 40px;
      text-decoration: none;
      color: #333;
      transition: 0.3s;
    }

    .social-container a:hover {
      background: #FF416C;
      color: white;
      border-color: #FF416C;
    }

    span {
      font-size: 12px;
      color: #888;
      margin-bottom: 15px;
    }

    /* Input Fields */
    .input-group {
      position: relative;
      width: 100%;
      margin: 8px 0;
    }

    input {
      background-color: var(--input-bg);
      border: none;
      padding: 12px 15px 12px 45px; /* Padding kiri buat icon */
      width: 100%;
      border-radius: 8px;
      outline: none;
      font-size: 14px;
    }

    .input-group i {
      position: absolute;
      left: 15px;
      top: 50%;
      transform: translateY(-50%);
      color: #888;
      font-size: 18px;
    }

    /* Buttons */
    button {
      border-radius: 20px;
      border: 1px solid #FF4B2B;
      background: var(--primary-grad);
      color: #FFFFFF;
      font-size: 12px;
      font-weight: bold;
      padding: 12px 45px;
      letter-spacing: 1px;
      text-transform: uppercase;
      transition: transform 80ms ease-in;
      cursor: pointer;
      margin-top: 20px;
      box-shadow: 0 5px 15px rgba(255, 75, 43, 0.3);
    }

    button:active {
      transform: scale(0.95);
    }

    button:focus {
      outline: none;
    }

    button.ghost {
      background: transparent;
      border-color: #FFFFFF;
      box-shadow: none;
    }

    /* ========== LOGIKA ANIMASI GESER (CORE) ========== */
    
    /* Posisi Awal: Login di kiri, Register di kanan (tersembunyi) */
    .sign-in-container {
      left: 0;
      width: 50%;
      z-index: 2;
    }

    .sign-up-container {
      left: 0;
      width: 50%;
      opacity: 0;
      z-index: 1;
    }

    /* Saat Container Active (Register Mode) */
    .container.right-panel-active .sign-in-container {
      transform: translateX(100%); /* Geser Login ke kanan */
    }

    .container.right-panel-active .sign-up-container {
      transform: translateX(100%); /* Geser Register ke kanan (posisi layar kanan) */
      opacity: 1;
      z-index: 5;
      animation: show 0.6s; /* Animasi muncul */
    }

    @keyframes show {
      0%, 49.99% {
        opacity: 0;
        z-index: 1;
      }
      50%, 100% {
        opacity: 1;
        z-index: 5;
      }
    }

    /* ========== OVERLAY (BAGIAN BERWARNA YANG BERGERAK) ========== */
    .overlay-container {
      position: absolute;
      top: 0;
      left: 50%; /* Mulai di tengah */
      width: 50%;
      height: 100%;
      overflow: hidden;
      transition: transform 0.6s ease-in-out;
      z-index: 100;
    }

    .container.right-panel-active .overlay-container {
      transform: translateX(-100%); /* Geser Overlay ke kiri */
    }

    .overlay {
      background: var(--overlay-grad);
      background-repeat: no-repeat;
      background-size: cover;
      background-position: 0 0;
      color: #FFFFFF;
      position: relative;
      left: -100%;
      height: 100%;
      width: 200%; /* Lebar 200% agar gradasi halus */
      transform: translateX(0);
      transition: transform 0.6s ease-in-out;
    }

    .container.right-panel-active .overlay {
      transform: translateX(50%);
    }

    .overlay-panel {
      position: absolute;
      display: flex;
      align-items: center;
      justify-content: center;
      flex-direction: column;
      padding: 0 40px;
      text-align: center;
      top: 0;
      height: 100%;
      width: 50%;
      transform: translateX(0);
      transition: transform 0.6s ease-in-out;
    }

    .overlay-left {
      transform: translateX(-20%);
    }

    .container.right-panel-active .overlay-left {
      transform: translateX(0);
    }

    .overlay-right {
      right: 0;
      transform: translateX(0);
    }

    .container.right-panel-active .overlay-right {
      transform: translateX(20%);
    }

    /* Typography di Overlay */
    .overlay-panel h1 {
      color: white;
      font-size: 24px;
      margin-bottom: 10px;
    }
    
    .overlay-panel p {
      font-size: 14px;
      font-weight: 300;
      line-height: 20px;
      letter-spacing: 0.5px;
      margin: 20px 0 30px;
    }

    /* Error Message Styling */
    .error-message {
      color: #ff4444;
      font-size: 11px;
      text-align: left;
      width: 100%;
      padding-left: 10px;
      height: 0;
      overflow: hidden;
      transition: 0.3s;
    }
    .error-message.show {
      height: auto;
      margin-bottom: 5px;
    }

    /* ========== RESPONSIVE MOBILE ========== */
    @media (max-width: 600px) {
      .container {
        width: 100%;
        min-height: 550px;
        border-radius: 0;
        box-shadow: none;
      }
      
      .form-container {
        width: 100%;
        position: absolute;
        transition: all 0.4s;
      }

      /* Di mobile, kita hilangkan efek sliding overlay kompleks 
         dan ganti dengan tumpukan (stack) atau toggle sederhana 
         agar tidak rusak layoutnya */
      .overlay-container {
        display: none; /* Hide slide overlay on mobile */
      }
      
      .sign-in-container, .sign-up-container {
        width: 100%;
        position: absolute;
        top: 0;
        left: 0;
        opacity: 1;
        z-index: 1;
        background: white;
      }

      /* Manual Toggle Button for Mobile */
      .mobile-toggle {
        display: block;
        margin-top: 15px;
        color: #FF4B2B;
        font-weight: bold;
        cursor: pointer;
        font-size: 13px;
      }

      /* Logic Sederhana Mobile */
      .sign-in-container { z-index: 2; }
      .sign-up-container { z-index: 1; opacity: 0; }
      
      .container.right-panel-active .sign-in-container {
        z-index: 1; opacity: 0; transform: none;
      }
      .container.right-panel-active .sign-up-container {
        z-index: 2; opacity: 1; transform: none; animation: none;
      }
    }

    @media (min-width: 601px) {
      .mobile-toggle { display: none; }
    }

  </style>
</head>

<body>

  <div class="container" id="container">
    
    <div class="form-container sign-up-container">
      <form method="post" action="/player/growid/login/validate" id="regisForm">
        <h1>Create Account</h1>
        <div class="social-container">
          <a href="#" class="social"><i class='bx bxl-facebook'></i></a>
          <a href="#" class="social"><i class='bx bxl-google-plus'></i></a>
          <a href="#" class="social"><i class='bx bxl-linkedin'></i></a>
        </div>
        <span>or use your email for registration</span>
        
        <input name="type" value="reg" type="hidden" />
        <input name="_token" value="<%= JSON.stringify(data) %>" type="hidden" />

        <div class="input-group">
          <i class='bx bxs-user'></i>
          <input type="text" name="growId" id="regisGrowId" placeholder="GrowID / Username" />
          <div class="error-message" id="regisUsernameError"></div>
        </div>

        <div class="input-group">
          <i class='bx bxs-envelope'></i>
          <input type="email" name="email" id="regisEmail" placeholder="Email" />
          <div class="error-message" id="regisEmailError"></div>
        </div>

        <div class="input-group">
          <i class='bx bxs-lock-alt'></i>
          <input type="password" name="password" id="regisPassword" placeholder="Password" />
          <div class="error-message" id="regisPasswordError"></div>
        </div>

        <button type="submit" id="regisButton">Sign Up</button>
        <div class="mobile-toggle" id="mobileToLogin">Already have account? Sign In</div>
      </form>
    </div>

    <div class="form-container sign-in-container">
      <form method="post" action="/player/growid/login/validate" id="loginForm">
        <h1>Sign in</h1>
        <div class="social-container">
          <a href="#" class="social"><i class='bx bxl-facebook'></i></a>
          <a href="#" class="social"><i class='bx bxl-discord'></i></a>
          <a href="#" class="social"><i class='bx bxl-telegram'></i></a>
        </div>
        <span>or use your account</span>

        <input name="type" value="log" type="hidden" />
        <input name="_token" value="<%= JSON.stringify(data) %>" type="hidden" />

        <div class="input-group">
          <i class='bx bxs-user'></i>
          <input type="text" name="growId" id="loginGrowId" placeholder="GrowID" />
          <div class="error-message" id="loginUsernameError"></div>
        </div>

        <div class="input-group">
          <i class='bx bxs-lock-alt'></i>
          <input type="password" name="password" id="loginPassword" placeholder="Password" />
          <div class="error-message" id="loginPasswordError"></div>
        </div>

        <a href="https://eternityps.site/" style="color: #333; font-size: 12px; margin: 15px 0; text-decoration: none;">Forgot your password?</a>
        
        <button type="submit" id="loginButton">Sign In</button>
        <div class="mobile-toggle" id="mobileToRegister">Don't have account? Sign Up</div>
      </form>
    </div>

    <div class="overlay-container">
      <div class="overlay">
        <div class="overlay-panel overlay-left">
          <h1>Welcome Back!</h1>
          <p>To keep connected with us please login with your personal info</p>
          <button class="ghost" id="signIn">Sign In</button>
        </div>
        <div class="overlay-panel overlay-right">
          <h1>Hello, Friend!</h1>
          <p>Enter your personal details and start journey with us</p>
          <button class="ghost" id="signUp">Sign Up</button>
        </div>
      </div>
    </div>

  </div>

  <script>
    document.addEventListener('DOMContentLoaded', () => {
      /* ========== TOGGLE SLIDER LOGIC ========== */
      const signUpButton = document.getElementById('signUp');
      const signInButton = document.getElementById('signIn');
      const container = document.getElementById('container');
      
      // Mobile Toggles
      const mobileToRegister = document.getElementById('mobileToRegister');
      const mobileToLogin = document.getElementById('mobileToLogin');

      // Geser ke Kanan (Mode Register)
      const activateRegister = () => {
        container.classList.add("right-panel-active");
        resetErrors('loginForm');
      };

      // Geser ke Kiri (Mode Login)
      const activateLogin = () => {
        container.classList.remove("right-panel-active");
        resetErrors('regisForm');
      };

      signUpButton.addEventListener('click', activateRegister);
      signInButton.addEventListener('click', activateLogin);
      
      // Mobile listeners
      mobileToRegister.addEventListener('click', activateRegister);
      mobileToLogin.addEventListener('click', activateLogin);

      /* ========== LOCAL STORAGE LOGIC ========== */
      if (localStorage.getItem('growId')) {
        const loginGrowId = document.getElementById('loginGrowId');
        if (loginGrowId) loginGrowId.value = localStorage.getItem('growId');
      }

      /* ========== VALIDATION LOGIC (SAMA SEPERTI YANG KAMU BERIKAN) ========== */
      const validateUsername = (username, errorElement) => {
        if (!username) return showValidationError(errorElement, 'Please enter username');
        if (username.length < 4) return showValidationError(errorElement, 'Min 4 characters');
        if (!/^[a-zA-Z0-9]+$/.test(username)) return showValidationError(errorElement, 'Alphanumeric only');
        if (username.length > 20) return showValidationError(errorElement, 'Max 20 characters');
        return true;
      };

      const validatePassword = (password, errorElement) => {
        if (!password) return showValidationError(errorElement, 'Please enter password');
        if (password.length < 6) return showValidationError(errorElement, 'Min 6 characters');
        return true;
      };

      const validateEmail = (email, errorElement) => {
        if (!email) return showValidationError(errorElement, 'Please enter email');
        if (!/^\S+@\S+\.\S+$/.test(email)) return showValidationError(errorElement, 'Invalid email format');
        return true;
      };

      const showValidationError = (el, msg) => {
        if (el) {
          el.innerHTML = msg;
          el.classList.add('show');
        }
        return false;
      };

      function resetErrors(formId) {
        const form = document.getElementById(formId);
        const errs = form.querySelectorAll('.error-message');
        errs.forEach(e => e.classList.remove('show'));
      }

      /* ========== FORM HANDLERS ========== */
      
      // LOGIN
      const form_login = document.getElementById('loginForm');
      form_login.addEventListener('submit', (e) => {
        e.preventDefault();
        const growId = document.getElementById('loginGrowId').value.trim();
        const pass = document.getElementById('loginPassword').value.trim();
        
        resetErrors('loginForm');
        
        if (validateUsername(growId, document.getElementById('loginUsernameError')) && 
            validatePassword(pass, document.getElementById('loginPasswordError'))) {
              
          const btn = document.getElementById("loginButton");
          btn.textContent = "Logging in...";
          
          setTimeout(() => {
             localStorage.setItem('growId', growId);
             form_login.submit();
          }, 1500);
        }
      });

      // REGISTER
      const form_regis = document.getElementById('regisForm');
      form_regis.addEventListener('submit', (e) => {
        e.preventDefault();
        const growId = document.getElementById('regisGrowId').value.trim();
        const email = document.getElementById('regisEmail').value.trim();
        const pass = document.getElementById('regisPassword').value.trim();

        resetErrors('regisForm');

        if (validateUsername(growId, document.getElementById('regisUsernameError')) && 
            validateEmail(email, document.getElementById('regisEmailError')) &&
            validatePassword(pass, document.getElementById('regisPasswordError'))) {
              
          const btn = document.getElementById("regisButton");
          btn.textContent = "Registering...";
          
          setTimeout(() => {
             form_regis.submit();
          }, 1500);
        }
      });

      // Clear errors on typing
      document.querySelectorAll('input').forEach(input => {
        input.addEventListener('input', function() {
          const err = this.parentElement.querySelector('.error-message');
          if(err) err.classList.remove('show');
        });
      });

    });
  </script>
</body>
</html>
