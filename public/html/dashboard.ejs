<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>GTPSID Login</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css" />
  <style>
    html,body{height:100%;display:flex;align-items:center;justify-content:center;background:#f0f2f5;}
    .box{max-width:400px;width:100%;background:#fff;padding:25px;border-radius:10px;box-shadow:0 0 15px rgba(0,0,0,0.1);}
    .hidden{display:none;}
    .token-box{margin-top:15px;word-break:break-all;font-family:monospace;background:#f8f9fa;padding:10px;border-radius:5px;}
  </style>
</head>
<body>
  <div class="box text-center">
    <h4>GTPSID Panel</h4>

    <form id="loginForm">
      <input type="text" name="_token" class="form-control mb-2" placeholder="Server Name *" required />
      <input type="text" name="growId" class="form-control mb-2" placeholder="GrowID *" required />
      <input type="password" name="password" class="form-control mb-3" placeholder="Password *" required />
      <button type="submit" class="btn btn-primary btn-block mb-2">Login</button>
      <button type="button" id="switchToRegister" class="btn btn-secondary btn-block">Register</button>
    </form>

    <form id="registerForm" class="hidden">
      <input type="text" name="_token" class="form-control mb-2" placeholder="Server Name *" required />
      <input type="text" name="growId" class="form-control mb-2" placeholder="New GrowID *" required />
      <input type="password" name="password" class="form-control mb-3" placeholder="Password *" required />
      <button type="submit" class="btn btn-success btn-block mb-2">Create Account</button>
      <button type="button" id="switchToLogin" class="btn btn-outline-secondary btn-block">Back</button>
    </form>

    <div id="resultBox" class="hidden">
      <h5 class="mt-2">Token Generated âœ…</h5>
      <div class="token-box" id="tokenBox"></div>
      <small>Copy this token and paste it into your GTPS client.</small>
      <button class="btn btn-outline-primary btn-block mt-3" id="backBtn">Back to Login</button>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/jquery@3.6.4/dist/jquery.min.js"></script>
  <script>
    const loginForm = $("#loginForm");
    const registerForm = $("#registerForm");
    const resultBox = $("#resultBox");
    const tokenBox = $("#tokenBox");

    $("#switchToRegister").click(() => { loginForm.hide(); registerForm.show(); });
    $("#switchToLogin").click(() => { registerForm.hide(); loginForm.show(); });
    $("#backBtn").click(() => { resultBox.hide(); loginForm.show(); });

    loginForm.on("submit", async e => {
      e.preventDefault();
      const data = Object.fromEntries(new FormData(e.target).entries());
      const res = await fetch("/player/growid/login/validate", {
        method: "POST", headers: { "Content-Type": "application/json" },
        body: JSON.stringify(data)
      });
      const j = await res.json();
      if (j.status === "success") showToken(j.token);
      else alert(j.message);
    });

    registerForm.on("submit", async e => {
      e.preventDefault();
      const data = Object.fromEntries(new FormData(e.target).entries());
      const res = await fetch("/player/growid/register", {
        method: "POST", headers: { "Content-Type": "application/json" },
        body: JSON.stringify(data)
      });
      const j = await res.json();
      if (j.status === "success") showToken(j.token);
      else alert(j.message);
    });

    function showToken(token) {
      loginForm.hide();
      registerForm.hide();
      tokenBox.text(token);
      resultBox.show();
    }
  </script>
</body>
</html>
