<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>GTPSID Login</title>
  <link rel="icon" href="https://s3.eu-west-1.amazonaws.com/cdn.growtopiagame.com/website/resources/assets/images/growtopia.ico" />
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css" />
  <style>
    html, body {
      height: 100%;
      margin: 0;
      background: none;
      display: flex;
      align-items: center;
      justify-content: center;
      background-color: #f8f9fa;
    }
    .login-container {
      max-width: 400px;
      margin: 80px auto;
      padding: 30px;
      background: white;
      border-radius: 10px;
      box-shadow: 0 0 15px rgba(0,0,0,0.1);
    }
    .password-toggle {
      position: absolute;
      right: 15px;
      top: 7px;
      cursor: pointer;
      font-size: 14px;
      color: #007bff;
      user-select: none;
    }
    .position-relative {
      position: relative;
    }
  </style>
</head>
<body>

<div class="login-container">
  <h3 class="text-center mb-4">Log Into Your GTPSID</h3>
  <form method="POST" action="/player/growid/login/validate" accept-charset="UTF-8" role="form" autocomplete="off">
    <div class="form-group">
      <input type="text" name="_token" class="form-control" placeholder="Server Name *" required>
    </div>

    <div class="form-group">
      <input type="text" name="growId" id="loginGrowId" class="form-control" placeholder="Your GrowID Name *" required />
    </div>

    <div class="form-group position-relative">
      <input type="password" name="password" id="loginPassword" class="form-control" placeholder="Your GrowID Password *" required />
      <span id="toggleLogPassword" class="password-toggle">SHOW</span>
    </div>

    <button type="submit" name="action" value="Login" id="loginBtn" class="btn btn-primary btn-block">Login</button>
    <button type="button" id="registerBtn" class="btn btn-secondary btn-block">Register</button>
  </form>
</div>

<script src="https://cdn.jsdelivr.net/npm/jquery@3.6.4/dist/jquery.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js"></script>
<script>
  document.addEventListener("DOMContentLoaded", function () {
    // Isi otomatis GrowID dari localStorage
    const stored = localStorage.getItem("growId");
    if (stored) document.getElementById("loginGrowId").value = stored;

    // Tombol Register redirect
    document.getElementById("registerBtn").addEventListener("click", function (e) {
      e.preventDefault();
      window.location.href = "/player/growid/register";
    });

    // Toggle password visibility
    document.getElementById("toggleLogPassword").addEventListener("click", function () {
      const pwdField = document.getElementById("loginPassword");
      const isHidden = pwdField.type === "password";
      pwdField.type = isHidden ? "text" : "password";
      this.textContent = isHidden ? "HIDE" : "SHOW";
    });
  });
</script>

</body>
</html>
