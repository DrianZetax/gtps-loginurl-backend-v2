<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>GTPSID Panel</title>
  <link rel="icon" href="https://s3.eu-west-1.amazonaws.com/cdn.growtopiagame.com/website/resources/assets/images/growtopia.ico" />
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css" />
  <style>
    html, body { height: 100%; display: flex; align-items: center; justify-content: center; background: #f8f9fa; }
    .container-box { max-width: 450px; background: white; border-radius: 10px; padding: 25px; box-shadow: 0 0 20px rgba(0,0,0,0.1); }
    .hidden { display: none; }
    .token-box { word-break: break-all; background: #f1f1f1; border-radius: 6px; padding: 10px; font-family: monospace; margin-top: 10px; }
  </style>
</head>
<body>
  <div class="container-box text-center">
    <h3 class="mb-3">GTPSID Account</h3>

    <!-- LOGIN FORM -->
    <form id="loginForm">
      <input type="text" name="_token" class="form-control mb-2" placeholder="Server Name *" required />
      <input type="text" name="growId" class="form-control mb-2" placeholder="GrowID *" required />
      <input type="password" name="password" class="form-control mb-3" placeholder="Password *" required />
      <button type="submit" class="btn btn-primary btn-block">Login</button>
      <button type="button" id="toRegister" class="btn btn-secondary btn-block">Register</button>
    </form>

    <!-- REGISTER FORM -->
    <form id="registerForm" class="hidden">
      <input type="text" name="_token" class="form-control mb-2" placeholder="Server Name *" required />
      <input type="text" name="growId" class="form-control mb-2" placeholder="GrowID *" required />
      <input type="password" name="password" class="form-control mb-3" placeholder="Password *" required />
      <button type="submit" class="btn btn-success btn-block">Register</button>
      <button type="button" id="toLogin" class="btn btn-outline-secondary btn-block">Back to Login</button>
    </form>

    <!-- DASHBOARD VIEW -->
    <div id="dashboard" class="hidden">
      <h5 class="mt-2">Welcome, <span id="dashName"></span> ðŸ‘‹</h5>
      <div class="token-box mt-3" id="tokenBox"></div>
      <button id="logout" class="btn btn-danger btn-block mt-3">Logout</button>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/jquery@3.6.4/dist/jquery.min.js"></script>
  <script>
    const loginForm = $("#loginForm");
    const registerForm = $("#registerForm");
    const dashboard = $("#dashboard");

    $("#toRegister").click(() => { loginForm.addClass("hidden"); registerForm.removeClass("hidden"); });
    $("#toLogin").click(() => { registerForm.addClass("hidden"); loginForm.removeClass("hidden"); });

    loginForm.on("submit", async e => {
      e.preventDefault();
      const data = Object.fromEntries(new FormData(e.target).entries());
      const res = await fetch("/player/growid/login/validate", { method: "POST", headers: {"Content-Type": "application/json"}, body: JSON.stringify(data) });
      const json = await res.json();
      if (json.status === "success") showDashboard(data.growId, json.token);
      else alert(json.message);
    });

    registerForm.on("submit", async e => {
      e.preventDefault();
      const data = Object.fromEntries(new FormData(e.target).entries());
      const res = await fetch("/player/growid/register", { method: "POST", headers: {"Content-Type": "application/json"}, body: JSON.stringify(data) });
      const json = await res.json();
      if (json.status === "success") showDashboard(data.growId, json.token);
      else alert(json.message);
    });

    function showDashboard(name, token) {
      $("#dashName").text(name);
      $("#tokenBox").text(token);
      loginForm.addClass("hidden");
      registerForm.addClass("hidden");
      dashboard.removeClass("hidden");
    }

    $("#logout").click(() => {
      dashboard.addClass("hidden");
      loginForm.removeClass("hidden");
    });
  </script>
</body>
</html>
