                    <p>Already have an account?</p>
                    <button type="button" class="signup-btn" onclick="switchTab('login')">Back to Login</button>
                </div>
            </div>

            <div class="footer">Â© 2025 GTPSID. All rights reserved.</div>
        </div>

        <!-- Bagian visual di sebelah kiri (bawah di mobile) -->
        <div class="visual-section">
            <div class="logo-container">
                <img src="https://s3.eu-west-1.amazonaws.com/cdn.growtopiagame.com/website/resources/assets/images/logo_header.png" alt="Growtopia Logo" draggable="false">
            </div>
            <h1>Welcome to</h1>
            <h2>GTPSID</h2>
            <p>Connect with thousands of players worldwide. Join the adventure in the world of Growtopia and explore endless possibilities!</p>
        </div>
    </div>

    <script>
        // Data server untuk autocomplete
        const servers = [
            "KINGPS",
            "STYLOPS",
            "CHINAPS", 
            "COASTPS",
            "SLOWLYPS",
            "NEXPS",
            "TESPS",
            "IDLEPS"
        ];

        // Inisialisasi saat DOM siap
        document.addEventListener("DOMContentLoaded", () => {
            // Load data dari localStorage
            const growId = localStorage.getItem("growId");
            const lastServer = localStorage.getItem("lastServer");
            
            if (growId) {
                document.getElementById("loginGrowId").value = growId;
                document.getElementById("registerGrowId").value = growId;
            }
            if (lastServer) {
                document.getElementById("loginServerInput").value = lastServer;
                document.getElementById("registerServerInput").value = lastServer;
            }
            
            // Setup autocomplete untuk server input
            setupServerAutocomplete('loginServerInput');
            setupServerAutocomplete('registerServerInput');
            
            // Event listener untuk tab buttons
            document.querySelectorAll('.tab-button').forEach(button => {
                button.addEventListener('click', function() {
                    switchTab(this.dataset.tab);
                });
            });
            
            // Event listener untuk toggle password
            document.getElementById("toggleLoginPassword").addEventListener("click", () => {
                togglePassword('loginPassword', 'toggleLoginPassword');
            });

            document.getElementById("toggleRegisterPassword").addEventListener("click", () => {
                togglePassword('registerPassword', 'toggleRegisterPassword');
                togglePassword('confirmPassword', 'toggleRegisterPassword');
            });
            
            // Event listener untuk form submission
            document.getElementById("loginForm").addEventListener("submit", handleLoginSubmit);
            document.getElementById("registerForm").addEventListener("submit", handleRegisterSubmit);
        });

        // Fungsi untuk switch tab
        function switchTab(tabName) {
            // Update tab buttons
            document.querySelectorAll('.tab-button').forEach(button => {
                button.classList.remove('active');
                if (button.dataset.tab === tabName) {
                    button.classList.add('active');
                }
            });

            // Update form content
            document.querySelectorAll('.form-content').forEach(content => {
                content.classList.remove('active');
            });
            document.getElementById(tabName + 'FormContent').classList.add('active');
        }

        // Fungsi untuk toggle password visibility
        function togglePassword(passwordId, toggleId) {
            const pwd = document.getElementById(passwordId);
            const toggle = document.getElementById(toggleId);
            if (pwd.type === "password") {
                pwd.type = "text";
                toggle.textContent = "Hide Password";
            } else {
                pwd.type = "password";
                toggle.textContent = "Show Password";
            }
        }

        // Fungsi untuk handle login submission
        function handleLoginSubmit(e) {
            e.preventDefault();
            
            const growId = document.getElementById("loginGrowId").value;
            const server = document.getElementById('loginServerInput').value;
            const password = document.getElementById('loginPassword').value;
            const submitBtn = document.getElementById('loginSubmitBtn');
            const messageBox = document.getElementById('loginMessage');
            
            if (!server || !growId || !password) {
                showMessage(messageBox, 'Please fill all required fields!', 'error');
                return;
            }
            
            // Simpan ke localStorage
            localStorage.setItem("growId", growId);
            localStorage.setItem("lastServer", server);
            
            // Show loading state
            submitBtn.classList.add('loading');
            submitBtn.disabled = true;
            
            // Simulate API call
            setTimeout(() => {
                submitBtn.classList.remove('loading');
                submitBtn.disabled = false;
                
                // Simulate successful login
                showMessage(messageBox, 'Login successful! Redirecting...', 'success');
                
                console.log("Login submitted:", { server, growId });
                
                // Redirect after success (simulated)
                setTimeout(() => {
                    alert(`Welcome back, ${growId}!`);
                }, 1000);
            }, 2000);
        }

        // Fungsi untuk handle register submission
        function handleRegisterSubmit(e) {
            e.preventDefault();
            
            const growId = document.getElementById("registerGrowId").value;
            const server = document.getElementById('registerServerInput').value;
            const password = document.getElementById('registerPassword').value;
            const confirmPassword = document.getElementById('confirmPassword').value;
            const submitBtn = document.getElementById('registerSubmitBtn');
            const messageBox = document.getElementById('registerMessage');
            
            if (!server || !growId || !password || !confirmPassword) {
                showMessage(messageBox, 'Please fill all required fields!', 'error');
                return;
            }
            
            if (password !== confirmPassword) {
                showMessage(messageBox, 'Passwords do not match!', 'error');
                return;
            }
            
            if (password.length < 4) {
                showMessage(messageBox, 'Password must be at least 4 characters!', 'error');
                return;
            }
            
            // Simpan ke localStorage
            localStorage.setItem("growId", growId);
            localStorage.setItem("lastServer", server);
            
            // Show loading state
            submitBtn.classList.add('loading');
            submitBtn.disabled = true;
            
            // Simulate API call
            setTimeout(() => {
                submitBtn.classList.remove('loading');
                submitBtn.disabled = false;
                
                // Simulate successful registration
                showMessage(messageBox, 'Account created successfully!', 'success');
                
                console.log("Register submitted:", { server, growId });
                
                // Switch to login tab after success
                setTimeout(() => {
                    switchTab('login');
                }, 1500);
            }, 2000);
        }

        // Fungsi untuk menampilkan pesan
        function showMessage(messageBox, message, type) {
            messageBox.textContent = message;
            messageBox.className = `message-box message-${type}`;
            messageBox.style.display = 'block';
            
            setTimeout(() => {
                messageBox.style.display = 'none';
            }, 5000);
        }

        // Fungsi untuk setup autocomplete server
        function setupServerAutocomplete(inputId) {
            const serverInput = document.getElementById(inputId);
            let autocompleteList = null;
            
            serverInput.addEventListener('input', function() {
                if (autocompleteList) {
                    autocompleteList.remove();
                    autocompleteList = null;
                }
                
                const value = this.value.toUpperCase();
                if (!value) return;
                
                const matches = servers.filter(server => 
                    server.startsWith(value)
                );
                
                if (matches.length === 0) return;
                
                autocompleteList = document.createElement('ul');
                autocompleteList.className = 'autocomplete-list';
                
                matches.forEach(match => {
                    const item = document.createElement('li');
                    item.textContent = match;
                    item.addEventListener('click', function() {
                        serverInput.value = match;
                        autocompleteList.remove();
                        autocompleteList = null;
                    });
                    autocompleteList.appendChild(item);
                });
                
                serverInput.parentNode.appendChild(autocompleteList);
            });
            
            document.addEventListener('click', function(e) {
                if (autocompleteList && !serverInput.contains(e.target) && !autocompleteList.contains(e.target)) {
                    autocompleteList.remove();
                    autocompleteList = null;
                }
            });
        }

        // Touch handling untuk mobile
        let startY;
        const body = document.body;

        body.addEventListener('touchstart', (e) => {
            startY = e.touches[0].clientY;
        });

        body.addEventListener('touchmove', (e) => {
            const currentY = e.touches[0].clientY;
            const diff = startY - currentY;
            
            if (body.scrollHeight > window.innerHeight) {
                return;
            }
            
            if (Math.abs(diff) > 10) {
                e.preventDefault();
            }
        }, { passive: false });
    </script>
