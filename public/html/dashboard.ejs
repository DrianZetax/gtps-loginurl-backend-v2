<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>GTPSID - Dashboard</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }
        
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: linear-gradient(135deg, #3c2a21 0%, #1a1208 100%);
            color: #d7ccc8;
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 20px;
        }
        
        .main-container {
            display: flex;
            width: 100%;
            max-width: 1000px;
            min-height: 600px;
            background: linear-gradient(135deg, #3c2a21 0%, #1a1208 100%);
            border-radius: 16px;
            overflow: hidden;
            border: 1px solid #5d4037;
        }

        /* Visual Section */
        .visual-section {
            flex: 1.2;
            background: linear-gradient(135deg, #8d6e63 0%, #5d4037 50%, #3e2723 100%);
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            padding: 40px;
            color: #fff;
            text-align: center;
            position: relative;
            overflow: hidden;
        }

        .visual-section h1 {
            font-size: 42px;
            margin-bottom: 10px;
            font-weight: 300;
        }

        .visual-section h2 {
            font-size: 48px;
            margin-bottom: 30px;
            font-weight: 700;
        }

        .visual-section p {
            font-size: 16px;
            line-height: 1.7;
            max-width: 320px;
            opacity: 0.9;
        }

        .icon-container {
            width: 80px;
            height: 80px;
            background: rgba(255, 255, 255, 0.1);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            margin-bottom: 25px;
            backdrop-filter: blur(5px);
            border: 1px solid rgba(255, 255, 255, 0.2);
        }

        .icon-container::before {
            content: 'ðŸŒ¿';
            font-size: 36px;
        }

        /* Form Container */
        .form-container {
            flex: 1;
            padding: 35px;
            display: flex;
            flex-direction: column;
            justify-content: center;
            background: rgba(30, 20, 10, 0.7);
            backdrop-filter: blur(10px);
        }

        /* Tab Navigation */
        .tab-navigation {
            display: flex;
            margin-bottom: 25px;
            border-bottom: 1px solid #5d4037;
        }

        .tab-btn {
            flex: 1;
            padding: 12px;
            background: none;
            border: none;
            color: #8d6e63;
            font-size: 16px;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s ease;
        }

        .tab-btn.active {
            color: #d7a461;
            border-bottom: 2px solid #d7a461;
        }

        /* Form Sections */
        .form-section {
            display: none;
        }

        .form-section.active {
            display: block;
        }

        form {
            display: flex;
            flex-direction: column;
            gap: 15px;
        }

        /* Input Fields */
        input[type="text"], 
        input[type="password"], 
        input[type="email"],
        select {
            width: 100%;
            padding: 14px 16px;
            font-size: 15px;
            background: rgba(50, 35, 25, 0.8);
            color: #efebe9;
            border: 1px solid #6d4c41;
            border-radius: 10px;
            transition: all 0.3s ease;
        }

        input:focus, select:focus {
            outline: none;
            border-color: #a1887f;
            background: rgba(60, 40, 30, 0.9);
        }

        ::placeholder {
            color: #bcaaa4;
        }

        /* Optional Fields */
        .optional-fields {
            margin: 8px 0;
            color: #8d6e63;
            font-size: 13px;
            text-align: center;
        }

        /* Buttons */
        button[type="submit"] {
            width: 100%;
            padding: 15px;
            border: none;
            border-radius: 10px;
            font-size: 16px;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s ease;
            margin-top: 10px;
        }

        button:active {
            transform: scale(0.98);
        }

        .btn-primary {
            background: linear-gradient(45deg, #d7a461, #b08c5a);
            color: #3e2723;
        }

        .btn-primary:hover {
            background: linear-gradient(45deg, #e0b879, #c19a64);
        }

        /* Toggle Password */
        .toggle-password {
            cursor: pointer;
            color: #a1887f;
            font-size: 13px;
            text-align: right;
            margin-top: -8px;
            margin-bottom: 8px;
            transition: color 0.3s;
        }

        .toggle-password:hover {
            color: #d7a461;
        }

        /* Alert Messages */
        .alert {
            padding: 12px;
            border-radius: 8px;
            margin-bottom: 15px;
            font-size: 14px;
            text-align: center;
            display: none;
        }

        .alert-success {
            background: rgba(76, 175, 80, 0.2);
            color: #4caf50;
            border: 1px solid #4caf50;
        }

        .alert-error {
            background: rgba(244, 67, 54, 0.2);
            color: #f44336;
            border: 1px solid #f44336;
        }

        /* Footer */
        .footer {
            text-align: center;
            margin-top: 25px;
            color: #8d6e63;
            font-size: 12px;
        }

        /* User Info Panel */
        .user-panel {
            background: rgba(50, 35, 25, 0.8);
            padding: 20px;
            border-radius: 10px;
            margin: 20px 0;
            border: 1px solid #6d4c41;
            display: none;
        }

        .user-panel.active {
            display: block;
        }

        .info-item {
            margin: 10px 0;
            text-align: left;
        }

        .info-label {
            color: #bcaaa4;
            font-weight: 600;
        }

        .info-value {
            color: #efebe9;
            margin-left: 10px;
        }

        /* Responsive */
        @media (max-width: 768px) {
            .main-container {
                flex-direction: column;
                height: auto;
                min-height: auto;
            }
            
            .visual-section {
                padding: 30px 20px;
                order: 2;
            }
            
            .visual-section h1 {
                font-size: 28px;
            }
            
            .visual-section h2 {
                font-size: 32px;
                margin-bottom: 15px;
            }
            
            .form-container {
                padding: 25px 20px;
                order: 1;
            }
        }
    </style>
</head>
<body>
    <div class="main-container">
        <!-- Form Container -->
        <div class="form-container">
            <div class="login-title">
                <h1>Welcome to</h1>
                <h2>GTPSID</h2>
            </div>

            <!-- Alert Messages -->
            <div id="alertMessage" class="alert"></div>

            <!-- User Info Panel (akan muncul setelah login/register) -->
            <div id="userPanel" class="user-panel">
                <div class="info-item">
                    <span class="info-label">GrowID:</span>
                    <span class="info-value" id="userGrowId">-</span>
                </div>
                <div class="info-item">
                    <span class="info-label">Status:</span>
                    <span class="info-value" id="userStatus">-</span>
                </div>
                <div class="info-item">
                    <span class="info-label">Server:</span>
                    <span class="info-value">GTPSID</span>
                </div>
                <div class="info-item">
                    <span class="info-label">Account Type:</span>
                    <span class="info-value" id="accountType">-</span>
                </div>
            </div>

            <!-- Tab Navigation -->
            <div class="tab-navigation">
                <button class="tab-btn active" data-tab="login">Login</button>
                <button class="tab-btn" data-tab="register">Register</button>
            </div>
            
            <!-- Login Form -->
            <div id="loginForm" class="form-section active">
                <form autocomplete="off" id="loginFormElement">
                    <input type="text" name="_token" id="serverInput" placeholder="Server Name *" required />
                    
                    <div class="optional-fields">GrowID & Password (Optional - for existing accounts)</div>
                    
                    <input type="text" name="growId" id="loginGrowId" placeholder="Your GrowID Name (Optional)" />
                    <input type="password" name="password" id="loginPassword" placeholder="Your GrowID Password (Optional)" />
                    
                    <div class="toggle-password" id="toggleLoginPassword">Show Password</div>
                    
                    <button type="submit" class="btn-primary">Connect to Game</button>
                </form>
            </div>

            <!-- Register Form -->
            <div id="registerForm" class="form-section">
                <form autocomplete="off" id="registerFormElement">
                    <input type="text" name="_token" id="registerServerInput" placeholder="Server Name *" required />
                    
                    <div class="optional-fields">Create Your GrowID Account</div>
                    
                    <input type="text" name="growId" id="registerGrowId" placeholder="Choose GrowID Name *" required />
                    <input type="password" name="password" id="registerPassword" placeholder="Choose Password *" required />
                    <input type="email" name="email" id="registerEmail" placeholder="Your Email *" required />
                    
                    <select name="gender" id="registerGender" required>
                        <option value="">Select Gender *</option>
                        <option value="man">Male</option>
                        <option value="woman">Female</option>
                    </select>
                    
                    <div class="toggle-password" id="toggleRegisterPassword">Show Password</div>
                    
                    <button type="submit" class="btn-primary">Create Account & Play</button>
                </form>
            </div>

            <div class="footer">Â© 2025 GTPSID. All rights reserved.</div>
        </div>

        <!-- Visual Section -->
        <div class="visual-section">
            <div class="icon-container"></div>
            <h1>Join The</h1>
            <h2>ADVENTURE</h2>
            <p>Create your account and join thousands of players in the amazing world of Growtopia. Build, explore, and make new friends!</p>
        </div>
    </div>

    <script>
        document.addEventListener("DOMContentLoaded", () => {
            // Initialize tabs
            const tabButtons = document.querySelectorAll('.tab-btn');
            const formSections = document.querySelectorAll('.form-section');
            const alertMessage = document.getElementById('alertMessage');
            const userPanel = document.getElementById('userPanel');

            // Check if we have data from backend
            const urlParams = new URLSearchParams(window.location.search);
            const hasData = <%= JSON.stringify(data).replace(/</g, '\\u003c') %>;

            // Jika ada data dari backend, tampilkan user panel
            if (hasData && Object.keys(hasData).length > 0) {
                showUserPanel(hasData);
            }

            // Tab functionality
            tabButtons.forEach(button => {
                button.addEventListener('click', () => {
                    const targetTab = button.getAttribute('data-tab');
                    
                    // Update active tab
                    tabButtons.forEach(btn => btn.classList.remove('active'));
                    button.classList.add('active');
                    
                    // Show target form
                    formSections.forEach(section => section.classList.remove('active'));
                    document.getElementById(`${targetTab}Form`).classList.add('active');
                    
                    // Clear alerts
                    hideAlert();
                });
            });

            // Load saved data
            const savedGrowId = localStorage.getItem("growId");
            const savedServer = localStorage.getItem("lastServer");
            
            if (savedGrowId) {
                document.getElementById("loginGrowId").value = savedGrowId;
                document.getElementById("registerGrowId").value = savedGrowId;
            }
            if (savedServer) {
                document.getElementById("serverInput").value = savedServer;
                document.getElementById("registerServerInput").value = savedServer;
            }

            // Password toggle functionality
            setupPasswordToggle('toggleLoginPassword', 'loginPassword');
            setupPasswordToggle('toggleRegisterPassword', 'registerPassword');

            // Sync server inputs
            const serverInputs = document.querySelectorAll('input[name="_token"]');
            serverInputs.forEach(input => {
                input.addEventListener('input', (e) => {
                    serverInputs.forEach(otherInput => {
                        if (otherInput !== e.target) {
                            otherInput.value = e.target.value;
                        }
                    });
                });
            });

            // Login form handler
            document.getElementById('loginFormElement').addEventListener('submit', async (e) => {
                e.preventDefault();
                
                const formData = new FormData(e.target);
                const data = {
                    _token: formData.get('_token'),
                    growId: formData.get('growId'),
                    password: formData.get('password'),
                    action: 'login'
                };

                if (!data._token) {
                    showAlert('Please enter a server name!', 'error');
                    return;
                }

                await submitForm('/player/growid/login/validate', data, 'login');
            });

            // Register form handler
            document.getElementById('registerFormElement').addEventListener('submit', async (e) => {
                e.preventDefault();
                
                const formData = new FormData(e.target);
                const data = {
                    _token: formData.get('_token'),
                    growId: formData.get('growId'),
                    password: formData.get('password'),
                    email: formData.get('email'),
                    gender: formData.get('gender')
                };

                // Validation
                if (!data._token) {
                    showAlert('Please enter a server name!', 'error');
                    return;
                }

                if (!data.growId || !data.password || !data.email || !data.gender) {
                    showAlert('Please fill all required fields!', 'error');
                    return;
                }

                if (data.growId.length < 3 || data.growId.length > 18) {
                    showAlert('GrowID must be between 3 and 18 characters!', 'error');
                    return;
                }

                if (data.password.length < 4 || data.password.length > 18) {
                    showAlert('Password must be between 4 and 18 characters!', 'error');
                    return;
                }

                if (!/^[a-zA-Z0-9]+$/.test(data.growId)) {
                    showAlert('GrowID can only contain letters and numbers!', 'error');
                    return;
                }

                await submitForm('/player/growid/register/validate', data, 'register');
            });

            // Helper functions
            function setupPasswordToggle(toggleId, passwordId) {
                const toggle = document.getElementById(toggleId);
                const password = document.getElementById(passwordId);
                
                toggle.addEventListener('click', () => {
                    if (password.type === 'password') {
                        password.type = 'text';
                        toggle.textContent = 'Hide Password';
                    } else {
                        password.type = 'password';
                        toggle.textContent = 'Show Password';
                    }
                });
            }

            async function submitForm(url, data, type) {
                try {
                    showAlert('Processing...', 'success');
                    
                    const response = await fetch(url, {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json',
                        },
                        body: JSON.stringify(data)
                    });

                    const result = await response.json();
                    
                    if (result.status === 'success') {
                        // Save to localStorage
                        if (data.growId) {
                            localStorage.setItem("growId", data.growId);
                            localStorage.setItem("lastServer", data._token);
                        }

                        if (type === 'register') {
                            showAlert('Registration successful! You can now login with your new account.', 'success');
                            // Show user panel
                            showUserPanel({
                                growId: data.growId,
                                status: 'Registered Successfully'
                            });
                            // Switch to login tab after successful registration
                            setTimeout(() => {
                                tabButtons[0].click();
                            }, 2000);
                        } else {
                            showAlert('Login successful! Connecting to game...', 'success');
                            // Show user panel
                            showUserPanel({
                                growId: data.growId || 'Guest',
                                status: 'Logged In'
                            });
                            // Simulate game connection
                            setTimeout(() => {
                                // Redirect to game with token
                                if (result.token) {
                                    window.location.href = 'gtpsid://play?token=' + result.token;
                                }
                            }, 1000);
                        }
                    } else {
                        showAlert(result.message || 'An error occurred!', 'error');
                    }
                } catch (error) {
                    console.error('Submission error:', error);
                    showAlert('Network error! Please try again.', 'error');
                }
            }

            function showUserPanel(userData) {
                document.getElementById('userGrowId').textContent = userData.growId || '-';
                document.getElementById('userStatus').textContent = userData.status || 'Connected';
                document.getElementById('accountType').textContent = userData.growId ? 'GrowID' : 'Guest';
                userPanel.classList.add('active');
            }

            function showAlert(message, type) {
                alertMessage.textContent = message;
                alertMessage.className = `alert alert-${type}`;
                alertMessage.style.display = 'block';
            }

            function hideAlert() {
                alertMessage.style.display = 'none';
            }
        });
    </script>
</body>
</html>
