<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>GTPSID Login</title>
  <link rel="icon" href="https://s3.eu-west-1.amazonaws.com/cdn.growtopiagame.com/website/resources/assets/images/growtopia.ico" />
  
  <style>
    /* Reset & Font Dasar */
    * {
      box-sizing: border-box;
      margin: 0;
      padding: 0;
    }

    html, body {
      height: 100%;
      background: transparent;
      color: #333;
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      
      display: flex;
      align-items: center;
      justify-content: center;
      overflow: hidden;
      padding: 20px;
    }

    /* Container utama yang memanjang ke samping */
    .main-container {
      display: flex;
      width: 100%;
      max-width: 950px;
      min-height: 520px;
      background: linear-gradient(135deg, #3c2a21 0%, #1a1208 100%);
      border-radius: 16px;
      overflow: hidden;
      border: 1px solid #5d4037;
      position: relative;
    }

    /* Bagian kiri untuk konten visual */
    .visual-section {
      flex: 1.2;
      background: linear-gradient(135deg, #8d6e63 0%, #5d4037 50%, #3e2723 100%);
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: center;
      padding: 40px;
      color: #fff;
      text-align: center;
      position: relative;
      overflow: hidden;
    }

    .visual-section h1 {
      font-size: 42px;
      margin-bottom: 10px;
      font-weight: 300;
      position: relative;
    }

    .visual-section h2 {
      font-size: 48px;
      margin-bottom: 30px;
      font-weight: 700;
      position: relative;
    }

    .visual-section p {
      font-size: 16px;
      line-height: 1.7;
      max-width: 320px;
      opacity: 0.9;
      position: relative;
    }

    /* Ikon dekoratif */
    .icon-container {
      width: 80px;
      height: 80px;
      background: rgba(255, 255, 255, 0.1);
      border-radius: 50%;
      display: flex;
      align-items: center;
      justify-content: center;
      margin-bottom: 25px;
      position: relative;
      backdrop-filter: blur(5px);
      border: 1px solid rgba(255, 255, 255, 0.2);
    }

    .icon-container::before {
      content: 'ðŸŒ¿';
      font-size: 36px;
    }

    /* Bagian kanan untuk form login */
    .login-container {
      flex: 1;
      padding: 45px;
      display: flex;
      flex-direction: column;
      justify-content: center;
      background: rgba(30, 20, 10, 0.7);
      backdrop-filter: blur(10px);
    }

    /* Judul */
    .login-title h1 {
      font-size: 32px;
      font-weight: 300;
      color: #d7ccc8;
      margin-bottom: 5px;
      text-align: center;
    }

    .login-title h2 {
      font-size: 36px;
      font-weight: 700;
      color: #d7ccc8;
      margin-bottom: 30px;
      text-align: center;
    }

    /* Form Styling */
    form {
      display: flex;
      flex-direction: column;
      gap: 18px;
    }

    /* Select Server Styling */
    .server-select-container {
      position: relative;
    }

    .server-select {
      width: 100%;
      padding: 15px 18px;
      font-size: 16px;
      background: rgba(50, 35, 25, 0.8);
      color: #efebe9;
      border: 1px solid #6d4c41;
      border-radius: 10px;
      transition: all 0.3s ease;
      appearance: none;
      cursor: pointer;
    }

    .server-select:focus {
      outline: none;
      border-color: #a1887f;
      background: rgba(60, 40, 30, 0.9);
    }

    /* Custom dropdown arrow */
    .server-select-container::after {
      content: 'â–¼';
      position: absolute;
      top: 50%;
      right: 18px;
      transform: translateY(-50%);
      color: #bcaaa4;
      pointer-events: none;
      font-size: 12px;
    }

    /* Style untuk option */
    .server-select option {
      background: #3c2a21;
      color: #efebe9;
      padding: 10px;
    }

    /* Input Fields */
    input[type="text"], input[type="password"] {
      width: 100%;
      padding: 15px 18px;
      font-size: 16px;
      background: rgba(50, 35, 25, 0.8);
      color: #efebe9;
      border: 1px solid #6d4c41;
      border-radius: 10px;
      transition: all 0.3s ease;
    }

    /* Efek fokus */
    input:focus {
      outline: none;
      border-color: #a1887f;
      background: rgba(60, 40, 30, 0.9);
    }

    /* Placeholder style */
    ::placeholder {
      color: #bcaaa4;
    }

    /* Container tombol */
    .button-container {
      display: flex;
      gap: 12px;
      margin-top: 10px;
    }

    /* Tombol Umum */
    button {
      flex: 1;
      padding: 15px;
      border: none;
      border-radius: 10px;
      font-size: 16px;
      font-weight: 600;
      cursor: pointer;
      transition: all 0.3s ease;
    }

    button:active {
      transform: scale(0.98);
    }

    /* Tombol Primer (Login) */
    .btn-primary {
      background: linear-gradient(45deg, #d7a461, #b08c5a);
      color: #3e2723;
    }
    .btn-primary:hover {
      background: linear-gradient(45deg, #e0b879, #c19a64);
    }

    /* Tombol Cancel */
    .btn-cancel {
      background: transparent;
      color: #a1887f;
      border: 2px solid #a1887f;
    }
    .btn-cancel:hover {
      background: rgba(161, 136, 127, 0.1);
    }

    /* Link "Show Password" */
    .toggle-password {
      cursor: pointer;
      color: #a1887f;
      font-size: 14px;
      text-align: right;
      margin-top: -8px;
      margin-bottom: 12px;
      transition: color 0.3s;
    }
    .toggle-password:hover {
      color: #d7a461;
    }

    /* Footer kecil */
    .footer {
      text-align: center;
      margin-top: 25px;
      color: #8d6e63;
      font-size: 12px;
    }

    /* ========== RESPONSIVE UNTUK MOBILE ========== */
    @media (max-width: 768px) {
      html, body {
        padding: 10px;
        overflow: auto;
        height: auto;
        min-height: 100vh;
        display: block;
        scrollbar-width: none;
        -ms-overflow-style: none;
      }

      html::-webkit-scrollbar,
      body::-webkit-scrollbar {
        display: none;
      }

      .main-container {
        flex-direction: column;
        height: auto;
        min-height: auto;
        margin: 0 auto;
        max-width: 100%;
        overflow: visible;
      }
      
      .visual-section {
        padding: 30px 20px;
        order: 2;
        overflow: visible;
      }
      
      .visual-section h1 {
        font-size: 28px;
      }
      
      .visual-section h2 {
        font-size: 32px;
        margin-bottom: 15px;
      }
      
      .visual-section p {
        font-size: 14px;
        max-width: 100%;
      }
      
      .login-container {
        padding: 30px 20px;
        order: 1;
        overflow: visible;
      }
      
      .login-title h1 {
        font-size: 24px;
      }
      
      .login-title h2 {
        font-size: 28px;
        margin-bottom: 20px;
      }

      .server-select,
      input[type="text"], 
      input[type="password"] {
        padding: 12px 15px;
        font-size: 16px;
      }

      .button-container {
        flex-direction: column;
        gap: 10px;
      }

      button {
        padding: 14px;
        font-size: 16px;
      }

      .icon-container {
        width: 60px;
        height: 60px;
        margin-bottom: 15px;
      }

      .icon-container::before {
        font-size: 28px;
      }
    }

    /* Untuk layar sangat kecil (iPhone SE dll) */
    @media (max-width: 375px) {
      .visual-section {
        padding: 25px 15px;
      }
      
      .login-container {
        padding: 25px 15px;
      }
      
      .visual-section h1 {
        font-size: 24px;
      }
      
      .visual-section h2 {
        font-size: 28px;
      }
      
      .login-title h1 {
        font-size: 22px;
      }
      
      .login-title h2 {
        font-size: 26px;
      }
    }

    /* Landscape mode untuk mobile */
    @media (max-height: 500px) and (orientation: landscape) {
      html, body {
        padding: 10px;
        overflow: auto;
      }

      .main-container {
        height: auto;
        min-height: auto;
      }
      
      .visual-section,
      .login-container {
        padding: 20px;
      }
    }

    html {
      scroll-behavior: smooth;
    }

  </style>
</head>
<body>

  <div class="main-container">
    <!-- Bagian form login di sebelah kanan (atas di mobile) -->
    <div class="login-container">
      <div class="login-title">
        <h1>Log Into Your</h1>
        <h2>GTPSID</h2>
      </div>
      
      <form method="POST" action="/player/login/validate" autocomplete="off" id="loginForm">
        <div class="server-select-container">
          <select name="_token" class="server-select" required id="serverSelect">
            <option value="" disabled selected>Select Server *</option>
            <!-- Options akan diisi oleh JavaScript -->
          </select>
        </div>
        
        <input type="text" name="growId" id="loginGrowId" placeholder="Your GrowID Name *" required />
        <input type="password" name="password" id="loginPassword" placeholder="Your GrowID Password *" required />
        
        <div class="toggle-password" id="togglePassword">Show Password</div>
        
        <div class="button-container">
          <button type="submit" name="action" value="Login" class="btn-primary">Login</button>
          <button type="button" class="btn-cancel">Cancel</button>
        </div>
      </form>
      <div class="footer">Â© 2025 GTPSID. All rights reserved.</div>
    </div>

    <!-- Bagian visual di sebelah kiri (bawah di mobile) -->
    <div class="visual-section">
      <div class="icon-container"></div>
      <h1>Welcome to</h1>
      <h2>GTPSID</h2>
      <p>Connect with thousands of players worldwide. Join the adventure in the world of Growtopia and explore endless possibilities!</p>
    </div>
  </div>

  <script>
    // Data server (bisa diganti dengan fetch ke server.json)
    const servers = [
  "STYLOPS",
  "CHINAPS", 
  "COASTPS",
  "SLOWLYPS",
  "NEXPS"
    ];

    // Fungsi untuk memuat server ke dropdown
    function loadServers() {
      const selectElement = document.getElementById('serverSelect');
      
      // Kosongkan options kecuali placeholder
      while (selectElement.children.length > 1) {
        selectElement.removeChild(selectElement.lastChild);
      }
      
      // Tambahkan server ke dropdown
      servers.forEach(server => {
        const option = document.createElement('option');
        option.value = server;
        option.textContent = server;
        selectElement.appendChild(option);
      });
    }

    document.addEventListener("DOMContentLoaded", () => {
      // Load servers ke dropdown
      loadServers();
      
      // Load data dari localStorage
      const growId = localStorage.getItem("growId");
      const lastServer = localStorage.getItem("lastServer");
      
      if (growId) document.getElementById("loginGrowId").value = growId;
      if (lastServer) {
        document.getElementById("serverSelect").value = lastServer;
      }
    });

    document.getElementById("togglePassword").addEventListener("click", () => {
      const pwd = document.getElementById("loginPassword");
      const toggle = document.getElementById("togglePassword");
      if (pwd.type === "password") {
        pwd.type = "text";
        toggle.textContent = "Hide Password";
      } else {
        pwd.type = "password";
        toggle.textContent = "Show Password";
      }
    });

    // Handle form submission
    document.getElementById("loginForm").addEventListener("submit", (e) => {
      const growId = document.getElementById("loginGrowId").value;
      const server = document.getElementById('serverSelect').value;
      
      // Simpan ke localStorage
      if (growId) localStorage.setItem("growId", growId);
      if (server) localStorage.setItem("lastServer", server);
      
      // Form akan langsung submit ke /player/login/validate
      // Tidak ada alert atau pencegahan submit
    });

    // Tombol Cancel
    document.querySelector('.btn-cancel').addEventListener('click', function() {
      if (confirm('Are you sure you want to cancel?')) {
        window.history.back();
      }
    });

    let startY;
    const body = document.body;

    body.addEventListener('touchstart', (e) => {
      startY = e.touches[0].clientY;
    });

    body.addEventListener('touchmove', (e) => {
      const currentY = e.touches[0].clientY;
      const diff = startY - currentY;
      
      if (body.scrollHeight > window.innerHeight) {
        return;
      }
      
      if (Math.abs(diff) > 10) {
        e.preventDefault();
      }
    }, { passive: false });

    // Fungsi untuk load dari server.json (jika diperlukan)
    async function loadServersFromJSON() {
      try {
        const response = await fetch('server.json');
        const serverData = await response.json();
        servers.length = 0; // Clear existing servers
        servers.push(...serverData);
        loadServers();
      } catch (error) {
        console.log('Using default servers, cannot load server.json:', error);
      }
    }
  </script>

</body>
</html>
