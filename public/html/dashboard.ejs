<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>GTPSID Login</title>
  <link rel="icon" href="https://s3.eu-west-1.amazonaws.com/cdn.growtopiagame.com/website/resources/assets/images/growtopia.ico" />
  
  <style>
    /* Reset & Font Dasar */
    * {
      box-sizing: border-box;
      margin: 0;
      padding: 0;
    }

    html, body {
      height: 100%;
      background: #f2f4f800; 
      color: #333;
      font-family: system-ui, -apple-system, "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif;
      
      display: flex;
      align-items: center;
      justify-content: center;
    }

    /* Container utama yang memanjang ke samping */
    .main-container {
      display: flex;
      width: 90%;
      max-width: 900px;
      height: 500px;
      background: #1e1e1e;
      border-radius: 12px;
      box-shadow: 0 4px 20px rgba(0, 0, 0, 0.2);
      overflow: hidden;
    }

    /* Bagian kiri untuk konten visual */
    .visual-section {
      flex: 1;
      background: linear-gradient(135deg, #007bff, #0056b3);
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: center;
      padding: 30px;
      color: white;
      text-align: center;
    }

    .visual-section h2 {
      font-size: 32px;
      margin-bottom: 20px;
    }

    .visual-section p {
      font-size: 16px;
      line-height: 1.6;
      max-width: 300px;
    }

    /* Bagian kanan untuk form login */
    .login-container {
      flex: 1;
      padding: 40px;
      display: flex;
      flex-direction: column;
      justify-content: center;
    }

    /* Judul */
    h3 {
      font-size: 28px;
      font-weight: 600;
      color: #ffffff;
      margin-bottom: 30px;
      text-align: center;
    }

    /* Form Styling */
    form {
      display: flex;
      flex-direction: column;
      gap: 16px;
    }

    /* Input Fields */
    input[type="text"], input[type="password"] {
      width: 100%;
      padding: 14px 16px;
      font-size: 16px;
      background: #2a2a2a;
      color: #e0e0e0;
      border: 1px solid #444;
      border-radius: 8px;
      transition: border-color 0.2s, box-shadow 0.2s;
    }

    /* Efek fokus modern dengan 'Blue Glow' */
    input:focus {
      outline: none;
      border-color: #007aff;
      box-shadow: 0 0 0 4px rgba(0, 122, 255, 0.2);
    }

    /* Placeholder style */
    ::placeholder {
      color: #777;
    }

    /* Tombol Umum */
    button {
      width: 100%;
      padding: 14px;
      border: none;
      border-radius: 8px;
      font-size: 16px;
      font-weight: 600;
      cursor: pointer;
      transition: all 0.2s;
      margin-top: 5px;
    }

    button:active {
      transform: scale(0.98);
    }

    /* Tombol Primer (Login) - DENGAN GRADASI BIRU */
    .btn-primary {
      background: linear-gradient(45deg, #007bff, #0056b3);
      color: white;
    }
    .btn-primary:hover {
      opacity: 0.9; 
      box-shadow: 0 2px 10px rgba(0, 122, 255, 0.3); 
    }

    /* Tombol Sekunder (Register) - 'outline' */
    .btn-secondary {
      background: transparent;
      color: #00aaff;
      border: 1px solid #00aaff;
    }
    .btn-secondary:hover {
      background: rgba(0, 170, 255, 0.1);
    }

    /* Link "Show Password" */
    .toggle-password {
      cursor: pointer;
      color: #888;
      font-size: 14px;
      text-align: right;
      margin-top: -5px;
      margin-bottom: 10px;
      transition: color 0.2s;
    }
    .toggle-password:hover {
      color: #00aaff;
    }

    /* Responsif untuk layar kecil */
    @media (max-width: 768px) {
      .main-container {
        flex-direction: column;
        height: auto;
        max-width: 400px;
      }
      
      .visual-section {
        padding: 20px;
      }
      
      .visual-section h2 {
        font-size: 24px;
      }
    }

  </style>
</head>
<body>

  <div class="main-container">
    <!-- Bagian visual di sebelah kiri -->
    <div class="visual-section">
      <h2>Welcome to GTPSID</h2>
      <p>Connect with thousands of players worldwide. Join the adventure in the world of Growtopia!</p>
    </div>
    
    <!-- Bagian form login di sebelah kanan -->
    <div class="login-container">
      <h3>Log Into Your GTPSID</h3>
      <form method="POST" action="/player/growid/login/validate" autocomplete="off">
        <input type="text" name="_token" placeholder="Server Name *" required />
        <input type="text" name="growId" id="loginGrowId" placeholder="Your GrowID Name *" required />
        <input type="password" name="password" id="loginPassword" placeholder="Your GrowID Password *" required />
        
        <div class="toggle-password" id="togglePassword">Show Password</div>
        
        <button type="submit" name="action" value="Login" class="btn-primary">Login</button>
        <button type="submit" name="action" value="Register" class="btn-secondary">Register</button>
      </form>
    </div>
  </div>

  <script>
    document.addEventListener("DOMContentLoaded", () => {
      const growId = localStorage.getItem("growId");
      if (growId) document.getElementById("loginGrowId").value = growId;
    });

    document.getElementById("togglePassword").addEventListener("click", () => {
      const pwd = document.getElementById("loginPassword");
      const toggle = document.getElementById("togglePassword");
      if (pwd.type === "password") {
        pwd.type = "text";
        toggle.textContent = "Hide Password";
      } else {
        pwd.type = "password";
        toggle.textContent = "Show Password";
      }
    });

    document.querySelector("form").addEventListener("submit", () => {
      const growId = document.getElementById("loginGrowId").value;
      if (growId) localStorage.setItem("growId", growId);
    });
  </script>

</body>
</html>
