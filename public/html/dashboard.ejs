<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>GTPSID Login</title>
  <link rel="icon" href="https://s3.eu-west-1.amazonaws.com/cdn.growtopiagame.com/website/resources/assets/images/growtopia.ico" />
  
  <style>
    /* Reset & Font Dasar */
    * {
      box-sizing: border-box;
      margin: 0;
      padding: 0;
    }

    html, body {
      height: 100%;
      background: transparent;
      color: #333;
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      
      display: flex;
      align-items: center;
      justify-content: center;
      overflow: hidden;
      padding: 20px;
    }

    /* Container utama yang memanjang ke samping */
    .main-container {
      display: flex;
      width: 100%;
      max-width: 950px;
      min-height: 520px;
      background: linear-gradient(135deg, #3c2a21 0%, #1a1208 100%);
      border-radius: 16px;
      overflow: hidden;
      border: 1px solid #5d4037;
      position: relative;
    }

    /* Bagian kiri untuk konten visual */
    .visual-section {
      flex: 1.2;
      background: linear-gradient(135deg, #8d6e63 0%, #5d4037 50%, #3e2723 100%);
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: center;
      padding: 40px;
      color: #fff;
      text-align: center;
      position: relative;
      overflow: hidden;
    }

    .visual-section h1 {
      font-size: 42px;
      margin-bottom: 10px;
      font-weight: 300;
      position: relative;
    }

    .visual-section h2 {
      font-size: 48px;
      margin-bottom: 30px;
      font-weight: 700;
      position: relative;
    }

    .visual-section p {
      font-size: 16px;
      line-height: 1.7;
      max-width: 320px;
      opacity: 0.9;
      position: relative;
    }

    /* Ikon dekoratif */
    .icon-container {
      width: 80px;
      height: 80px;
      background: rgba(255, 255, 255, 0.1);
      border-radius: 50%;
      display: flex;
      align-items: center;
      justify-content: center;
      margin-bottom: 25px;
      position: relative;
      backdrop-filter: blur(5px);
      border: 1px solid rgba(255, 255, 255, 0.2);
    }

    .icon-container::before {
      content: 'üåø';
      font-size: 36px;
    }

    /* Bagian kanan untuk form login */
    .login-container {
      flex: 1;
      padding: 45px;
      display: flex;
      flex-direction: column;
      justify-content: center;
      background: rgba(30, 20, 10, 0.7);
      backdrop-filter: blur(10px);
    }

    /* Judul */
    .login-title h1 {
      font-size: 32px;
      font-weight: 300;
      color: #d7ccc8;
      margin-bottom: 5px;
      text-align: center;
    }

    .login-title h2 {
      font-size: 36px;
      font-weight: 700;
      color: #d7ccc8;
      margin-bottom: 30px;
      text-align: center;
    }

    /* Form Styling */
    form {
      display: flex;
      flex-direction: column;
      gap: 18px;
    }

    /* Input Fields */
    input[type="text"], input[type="password"], input[type="email"] {
      width: 100%;
      padding: 15px 18px;
      font-size: 16px;
      background: rgba(50, 35, 25, 0.8);
      color: #efebe9;
      border: 1px solid #6d4c41;
      border-radius: 10px;
      transition: all 0.3s ease;
    }

    /* Efek fokus */
    input:focus {
      outline: none;
      border-color: #a1887f;
      background: rgba(60, 40, 30, 0.9);
    }

    /* Placeholder style */
    ::placeholder {
      color: #bcaaa4;
    }

    /* Gender Selection */
    .gender-selection {
      display: flex;
      align-items: center;
      gap: 15px;
      color: #d7ccc8;
      font-size: 14px;
      margin: 10px 0;
    }

    .gender-selection label {
      font-weight: 600;
    }

    .gender-options {
      display: flex;
      gap: 10px;
    }

    .gender-option {
      display: flex;
      align-items: center;
      gap: 5px;
      cursor: pointer;
    }

    .gender-option input[type="radio"] {
      margin: 0;
    }

    /* Tombol Umum */
    button {
      width: 100%;
      padding: 15px;
      border: none;
      border-radius: 10px;
      font-size: 16px;
      font-weight: 600;
      cursor: pointer;
      transition: all 0.3s ease;
      margin-top: 8px;
    }

    button:active {
      transform: scale(0.98);
    }

    /* Tombol Primer (Login) */
    .btn-primary {
      background: linear-gradient(45deg, #d7a461, #b08c5a);
      color: #3e2723;
    }
    .btn-primary:hover {
      background: linear-gradient(45deg, #e0b879, #c19a64);
    }

    /* Tombol Sekunder (Register) */
    .btn-secondary {
      background: transparent;
      color: #d7a461;
      border: 2px solid #d7a461;
    }
    .btn-secondary:hover {
      background: rgba(215, 164, 97, 0.1);
    }

    /* Tombol Toggle Form */
    .btn-toggle {
      background: transparent;
      color: #8d6e63;
      border: 1px solid #6d4c41;
      font-size: 14px;
      padding: 10px;
      margin-top: 5px;
    }
    .btn-toggle:hover {
      background: rgba(109, 76, 65, 0.2);
      color: #d7a461;
    }

    /* Link "Show Password" */
    .toggle-password {
      cursor: pointer;
      color: #a1887f;
      font-size: 14px;
      text-align: right;
      margin-top: -8px;
      margin-bottom: 12px;
      transition: color 0.3s;
    }
    .toggle-password:hover {
      color: #d7a461;
    }

    /* Form Toggle */
    .form-toggle {
      text-align: center;
      margin-top: 15px;
      color: #8d6e63;
      font-size: 14px;
    }

    .form-toggle a {
      color: #d7a461;
      text-decoration: none;
      cursor: pointer;
      font-weight: 600;
    }

    .form-toggle a:hover {
      text-decoration: underline;
    }

    /* Footer kecil */
    .footer {
      text-align: center;
      margin-top: 25px;
      color: #8d6e63;
      font-size: 12px;
    }

    /* Message Box */
    .message-box {
      padding: 12px 15px;
      border-radius: 8px;
      margin-bottom: 15px;
      font-size: 14px;
      text-align: center;
      display: none;
    }

    .message-success {
      background: rgba(76, 175, 80, 0.2);
      color: #4caf50;
      border: 1px solid #4caf50;
    }

    .message-error {
      background: rgba(244, 67, 54, 0.2);
      color: #f44336;
      border: 1px solid #f44336;
    }

    /* Loading State */
    .loading {
      opacity: 0.7;
      pointer-events: none;
    }

    /* ========== RESPONSIVE UNTUK MOBILE ========== */
    @media (max-width: 768px) {
      html, body {
        padding: 10px;
        overflow: auto;
        height: auto;
        min-height: 100vh;
        display: block;
        scrollbar-width: none;
        -ms-overflow-style: none;
      }

      html::-webkit-scrollbar,
      body::-webkit-scrollbar {
        display: none;
      }

      .main-container {
        flex-direction: column;
        height: auto;
        min-height: auto;
        margin: 0 auto;
        max-width: 100%;
        overflow: visible;
      }
      
      .visual-section {
        padding: 30px 20px;
        order: 2;
        overflow: visible;
      }
      
      .visual-section h1 {
        font-size: 28px;
      }
      
      .visual-section h2 {
        font-size: 32px;
        margin-bottom: 15px;
      }
      
      .visual-section p {
        font-size: 14px;
        max-width: 100%;
      }
      
      .login-container {
        padding: 30px 20px;
        order: 1;
        overflow: visible;
      }
      
      .login-title h1 {
        font-size: 24px;
      }
      
      .login-title h2 {
        font-size: 28px;
        margin-bottom: 20px;
      }

      input[type="text"], 
      input[type="password"],
      input[type="email"] {
        padding: 12px 15px;
        font-size: 16px;
      }

      button {
        padding: 14px;
        font-size: 16px;
      }

      .icon-container {
        width: 60px;
        height: 60px;
        margin-bottom: 15px;
      }

      .icon-container::before {
        font-size: 28px;
      }

      .gender-selection {
        flex-direction: column;
        align-items: flex-start;
        gap: 10px;
      }
    }

    /* Untuk layar sangat kecil (iPhone SE dll) */
    @media (max-width: 375px) {
      .visual-section {
        padding: 25px 15px;
      }
      
      .login-container {
        padding: 25px 15px;
      }
      
      .visual-section h1 {
        font-size: 24px;
      }
      
      .visual-section h2 {
        font-size: 28px;
      }
      
      .login-title h1 {
        font-size: 22px;
      }
      
      .login-title h2 {
        font-size: 26px;
      }
    }

    /* Landscape mode untuk mobile */
    @media (max-height: 500px) and (orientation: landscape) {
      html, body {
        padding: 10px;
        overflow: auto;
      }

      .main-container {
        height: auto;
        min-height: auto;
      }
      
      .visual-section,
      .login-container {
        padding: 20px;
      }
    }

    html {
      scroll-behavior: smooth;
    }

  </style>
</head>
<body>

  <div class="main-container">
    <!-- Bagian form login di sebelah kanan (atas di mobile) -->
    <div class="login-container">
      <div class="login-title">
        <h1>Log Into Your</h1>
        <h2>GTPSID</h2>
      </div>
      
      <!-- Message Box -->
      <div id="messageBox" class="message-box"></div>
      
      <!-- Login Form -->
      <form method="POST" action="/player/growid/login/validate" autocomplete="off" id="loginForm">
        <input type="text" name="_token" id="serverInput" placeholder="Server Name *" required />
        
        <input type="text" name="growId" id="loginGrowId" placeholder="Your GrowID Name *" required />
        <input type="password" name="password" id="loginPassword" placeholder="Your GrowID Password *" required />
        
        <div class="toggle-password" id="togglePassword">Show Password</div>
        
        <button type="submit" name="action" value="Login" class="btn-primary">Login</button>
        <button type="button" class="btn-secondary" id="showRegisterBtn">Create New Account</button>
      </form>

      <!-- Register Form -->
      <form method="POST" action="/player/growid/login/validate" autocomplete="off" id="registerForm" style="display: none;">
        <input type="text" name="_token" id="registerServer" placeholder="Server Name *" required />
        
        <input type="text" name="growId" id="registerGrowId" placeholder="Your GrowID Name *" required />
        <input type="password" name="password" id="registerPassword" placeholder="Your GrowID Password *" required />
        <input type="password" name="confirmPassword" id="registerConfirmPassword" placeholder="Confirm Password *" required />
        <input type="email" name="email" id="registerEmail" placeholder="Your Email (Optional)" />
        
        <div class="gender-selection">
          <label>Gender:</label>
          <div class="gender-options">
            <div class="gender-option">
              <input type="radio" name="gender" value="man" id="genderMale" checked>
              <label for="genderMale">Male</label>
            </div>
            <div class="gender-option">
              <input type="radio" name="gender" value="woman" id="genderFemale">
              <label for="genderFemale">Female</label>
            </div>
          </div>
        </div>
        
        <input type="hidden" name="action" value="register">
        
        <button type="submit" class="btn-primary">Complete Registration</button>
        <button type="button" class="btn-toggle" id="showLoginBtn">‚Üê Back to Login</button>
      </form>
      
      <div class="footer">¬© 2025 GTPSID. All rights reserved.</div>
    </div>

    <!-- Bagian visual di sebelah kiri (bawah di mobile) -->
    <div class="visual-section">
      <div class="icon-container"></div>
      <h1>Welcome to</h1>
      <h2>GTPSID</h2>
      <p>Connect with thousands of players worldwide. Join the adventure in the world of Growtopia and explore endless possibilities!</p>
    </div>
  </div>

  <script>
    // Data server untuk autocomplete (opsional)
    const servers = [
      "STYLOPS",
      "CHINAPS", 
      "COASTPS",
      "SLOWLYPS",
      "NEXPS",
      "TESPS",
      "IDLEPS"
    ];

    document.addEventListener("DOMContentLoaded", () => {
      // Load data dari localStorage
      const growId = localStorage.getItem("growId");
      const lastServer = localStorage.getItem("lastServer");
      
      if (growId) document.getElementById("loginGrowId").value = growId;
      if (lastServer) {
        document.getElementById("serverInput").value = lastServer;
        document.getElementById("registerServer").value = lastServer;
      }
      
      // Setup autocomplete untuk server input
      setupServerAutocomplete();
      
      // Form toggle handlers
      document.getElementById("showRegisterBtn").addEventListener("click", showRegisterForm);
      document.getElementById("showLoginBtn").addEventListener("click", showLoginForm);
    });

    // Toggle password visibility
    document.getElementById("togglePassword").addEventListener("click", () => {
      const pwd = document.getElementById("loginPassword");
      const toggle = document.getElementById("togglePassword");
      if (pwd.type === "password") {
        pwd.type = "text";
        toggle.textContent = "Hide Password";
      } else {
        pwd.type = "password";
        toggle.textContent = "Show Password";
      }
    });

    // Show register form
    function showRegisterForm() {
      document.getElementById("loginForm").style.display = "none";
      document.getElementById("registerForm").style.display = "flex";
      
      // Copy server value from login form
      const serverValue = document.getElementById("serverInput").value;
      if (serverValue) {
        document.getElementById("registerServer").value = serverValue;
      }
    }

    // Show login form
    function showLoginForm() {
      document.getElementById("registerForm").style.display = "none";
      document.getElementById("loginForm").style.display = "flex";
    }

    // Show message
    function showMessage(message, type) {
      const messageBox = document.getElementById("messageBox");
      messageBox.textContent = message;
      messageBox.className = `message-box message-${type}`;
      messageBox.style.display = "block";
      
      setTimeout(() => {
        messageBox.style.display = "none";
      }, 5000);
    }

    // Handle login form submission
    document.getElementById("loginForm").addEventListener("submit", function(e) {
      e.preventDefault();
      
      const growId = document.getElementById("loginGrowId").value;
      const server = document.getElementById('serverInput').value;
      const password = document.getElementById("loginPassword").value;
      
      // Validasi dasar
      if (!server || !growId || !password) {
        showMessage("Please fill in all required fields", "error");
        return;
      }
      
      // Simpan ke localStorage
      if (growId) localStorage.setItem("growId", growId);
      if (server) localStorage.setItem("lastServer", server);
      
      // Submit form
      this.submit();
    });

    // Handle register form submission - VALIDASI CLIENT SIDE
    document.getElementById("registerForm").addEventListener("submit", function(e) {
      e.preventDefault();
      
      const server = document.getElementById('registerServer').value;
      const growId = document.getElementById("registerGrowId").value;
      const password = document.getElementById("registerPassword").value;
      const confirmPassword = document.getElementById("registerConfirmPassword").value;
      const email = document.getElementById("registerEmail").value;
      const gender = document.querySelector('input[name="gender"]:checked').value;
      
      console.log('Frontend Register Data:', {
        server, growId, password, confirmPassword, email, gender
      });
      
      // Validasi
      if (!server || !growId || !password || !confirmPassword) {
        showMessage("Please fill in all required fields", "error");
        return;
      }
      
      if (password !== confirmPassword) {
        showMessage("Passwords do not match", "error");
        return;
      }
      
      if (growId.length < 3 || growId.length > 18) {
        showMessage("GrowID must be between 3 and 18 characters", "error");
        return;
      }
      
      if (password.length < 4 || password.length > 18) {
        showMessage("Password must be between 4 and 18 characters", "error");
        return;
      }
      
      // Validasi karakter GrowID (hanya huruf dan angka)
      if (!/^[a-zA-Z0-9]+$/.test(growId)) {
        showMessage("GrowID can only contain letters and numbers", "error");
        return;
      }
      
      // Set loading state
      const submitBtn = this.querySelector('button[type="submit"]');
      const originalText = submitBtn.textContent;
      submitBtn.textContent = "Registering...";
      submitBtn.disabled = true;
      
      // Simpan data ke localStorage
      localStorage.setItem("growId", growId);
      localStorage.setItem("lastServer", server);
      
      // Show success message
      showMessage("Registration data validated. Redirecting to game...", "success");
      
      // Submit form setelah delay singkat
      setTimeout(() => {
        this.submit();
      }, 1500);
    });

    let startY;
    const body = document.body;

    body.addEventListener('touchstart', (e) => {
      startY = e.touches[0].clientY;
    });

    body.addEventListener('touchmove', (e) => {
      const currentY = e.touches[0].clientY;
      const diff = startY - currentY;
      
      if (body.scrollHeight > window.innerHeight) {
        return;
      }
      
      if (Math.abs(diff) > 10) {
        e.preventDefault();
      }
    }, { passive: false });

    // Fungsi untuk setup autocomplete
    function setupServerAutocomplete() {
      const serverInputs = [
        document.getElementById('serverInput'),
        document.getElementById('registerServer')
      ];
      
      serverInputs.forEach(serverInput => {
        let autocompleteList = null;
        
        serverInput.addEventListener('input', function() {
          // Hapus daftar autocomplete sebelumnya
          if (autocompleteList) {
            autocompleteList.remove();
            autocompleteList = null;
          }
          
          const value = this.value.toUpperCase();
          if (!value) return;
          
          // Filter server yang cocok
          const matches = servers.filter(server => 
            server.startsWith(value)
          );
          
          if (matches.length === 0) return;
          
          // Buat daftar autocomplete
          autocompleteList = document.createElement('ul');
          autocompleteList.className = 'autocomplete-list';
          autocompleteList.style.cssText = `
            position: absolute;
            background: rgba(50, 35, 25, 0.95);
            border: 1px solid #6d4c41;
            border-radius: 10px;
            width: ${serverInput.offsetWidth}px;
            max-height: 150px;
            overflow-y: auto;
            z-index: 1000;
            margin-top: 5px;
            list-style: none;
            padding: 0;
          `;
          
          matches.forEach(match => {
            const item = document.createElement('li');
            item.textContent = match;
            item.style.cssText = `
              padding: 10px 15px;
              cursor: pointer;
              color: #efebe9;
              border-bottom: 1px solid #6d4c41;
            `;
            item.addEventListener('mouseover', function() {
              this.style.background = 'rgba(93, 64, 55, 0.8)';
            });
            item.addEventListener('mouseout', function() {
              this.style.background = 'transparent';
            });
            item.addEventListener('click', function() {
              serverInput.value = match;
              autocompleteList.remove();
              autocompleteList = null;
            });
            autocompleteList.appendChild(item);
          });
          
          // Tambahkan ke DOM
          serverInput.parentNode.appendChild(autocompleteList);
        });
        
        // Hapus autocomplete saat klik di luar
        document.addEventListener('click', function(e) {
          if (autocompleteList && !serverInput.contains(e.target) && !autocompleteList.contains(e.target)) {
            autocompleteList.remove();
            autocompleteList = null;
          }
        });
      });
    }
  </script>

</body>
